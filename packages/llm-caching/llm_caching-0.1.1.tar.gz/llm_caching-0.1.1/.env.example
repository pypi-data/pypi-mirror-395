# LLM Cache Configuration
# Copy this file to .env and customize as needed

# ============================================================================
# Storage Backend
# ============================================================================

# Backend type: 'sqlite' (default) or 'redis'
# - sqlite: File-based, no setup required, good for local dev
# - redis: Production-ready, scalable, requires Redis server
LLM_CACHE_BACKEND=sqlite

# Maximum number of cache entries before LRU eviction starts
# Default: 1000
LLM_CACHE_MAX_SIZE=1000

# ============================================================================
# SQLite Configuration (when LLM_CACHE_BACKEND=sqlite)
# ============================================================================

# Path to SQLite database file
# Default: ./llm_cache.db
LLM_CACHE_SQLITE_PATH=./llm_cache.db

# ============================================================================
# Redis Configuration (when LLM_CACHE_BACKEND=redis)
# ============================================================================

# Redis server host
# Default: localhost
LLM_CACHE_REDIS_HOST=localhost

# Redis server port
# Default: 6379
LLM_CACHE_REDIS_PORT=6379

# Redis database number (0-15)
# Default: 0
LLM_CACHE_REDIS_DB=0

# Redis password (optional, leave empty if no auth)
# Default: none
LLM_CACHE_REDIS_PASSWORD=

# ============================================================================
# HTTP Proxy Server Configuration
# ============================================================================

# Host to bind the proxy server to
# - 0.0.0.0: Listen on all network interfaces (production)
# - 127.0.0.1: Listen only on localhost (local dev)
# Default: 0.0.0.0
LLM_CACHE_PROXY_HOST=0.0.0.0

# Port for the proxy server
# Default: 8000
LLM_CACHE_PROXY_PORT=8000

# ============================================================================
# Example Configurations
# ============================================================================

# Example 1: Local development with SQLite
# LLM_CACHE_BACKEND=sqlite
# LLM_CACHE_SQLITE_PATH=./dev_cache.db
# LLM_CACHE_MAX_SIZE=500
# LLM_CACHE_PROXY_PORT=8000

# Example 2: Production with Redis
# LLM_CACHE_BACKEND=redis
# LLM_CACHE_REDIS_HOST=redis.example.com
# LLM_CACHE_REDIS_PORT=6379
# LLM_CACHE_REDIS_PASSWORD=your_secure_password
# LLM_CACHE_MAX_SIZE=10000
# LLM_CACHE_PROXY_HOST=0.0.0.0
# LLM_CACHE_PROXY_PORT=8000

# Example 3: Shared Redis for team caching
# LLM_CACHE_BACKEND=redis
# LLM_CACHE_REDIS_HOST=team-redis.internal
# LLM_CACHE_REDIS_DB=1
# LLM_CACHE_MAX_SIZE=5000
