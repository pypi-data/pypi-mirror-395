{
  "title": "AI Assistant",
  "description": "AI Assistant settings",
  "type": "object",
  "properties": {
    "provider": {
      "title": "LLM Provider",
      "description": "The LLM provider to use (openrouter, openai, anthropic, local)",
      "type": "string",
      "enum": ["openrouter", "openai", "anthropic", "local"],
      "default": "openrouter"
    },
    "apiKey": {
      "title": "API Key",
      "description": "API key for the selected LLM provider",
      "type": "string",
      "default": ""
    },
    "model": {
      "title": "Model",
      "description": "Model to use (for OpenRouter)",
      "type": "string",
      "default": "anthropic/claude-3.5-sonnet"
    },
    "baseUrl": {
      "title": "Base URL",
      "description": "Base URL for local models",
      "type": "string",
      "default": ""
    },
    "temperature": {
      "title": "Temperature",
      "description": "Sampling temperature (0.0 to 2.0)",
      "type": "number",
      "minimum": 0.0,
      "maximum": 2.0,
      "default": 0.7
    },
    "maxTokens": {
      "title": "Max Tokens",
      "description": "Maximum number of tokens to generate",
      "type": "number",
      "minimum": 1,
      "maximum": 32768,
      "default": 4096
    }
  },
  "additionalProperties": false
}
