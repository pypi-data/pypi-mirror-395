{
  "mcpServers": {
    "wistx": {
      "command": "pipx",
      "args": ["run", "--no-cache", "wistx-mcp"],
      "env": {
        "WISTX_API_KEY": "YOUR_API_KEY"
      }
    }
  }
}

// Required:
// - WISTX_API_KEY: Your WISTX API key (get from app.wistx.ai)
//
// Optional (only needed for advanced tools):
// - WISTX_API_URL: API backend URL (empty string = default to http://localhost:8000)
// - MONGODB_URI: MongoDB connection string (if using tools that access MongoDB directly)
// - PINECONE_API_KEY: Pinecone API key (if using tools that access Pinecone directly)
// - OPENAI_API_KEY: OpenAI API key (for embeddings in vector search)
// - TAVILY_API_KEY: Tavily API key (for web search in research_knowledge_base)

