{
  "name": "MCP Mapped Resource Library Development Container",

  // Use docker-compose for DevContainer
  "dockerComposeFile": "../docker-compose.devcontainer.yml",
  "service": "mcp-mapped-resource-lib-vscode",

  // Set the default user for VS Code
  "remoteUser": "vscode",

  // Working directory inside the container
  "workspaceFolder": "/workspace",

  // Forward ports (add any ports your application needs)
  "forwardPorts": [],

  // Install VS Code extensions automatically in the container
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.debugpy",
        "charliermarsh.ruff",
        "anthropic.claude-code"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/home/vscode/.local/bin/uv",
        "python.terminal.activateEnvironment": true,
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },

  // Run commands after container creation
  "postCreateCommand": "cd /workspace && uv sync --all-extras",

  // Fix docker group GID to match host's docker socket
  "postStartCommand": "sudo chgrp docker /var/run/docker.sock 2>/dev/null || true",

  // Features to add
  "features": {}
}
