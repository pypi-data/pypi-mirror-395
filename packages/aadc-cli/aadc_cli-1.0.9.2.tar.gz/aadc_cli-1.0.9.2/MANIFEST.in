include README.md
include LICENSE
include requirements.txt

# Exclude sensitive and unnecessary files
global-exclude *.pyc
global-exclude __pycache__
global-exclude *.env
global-exclude .env*
global-exclude *.egg-info

# Exclude folders that shouldn't be in the package
prune projects
prune website
prune node_modules
prune .git
prune __pycache__
prune *.egg-info
prune dist
prune build
prune .vscode
