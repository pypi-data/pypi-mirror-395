    <record id="l10n_es_genci_account_view_move_form" model="ir.ui.view">
        <field name="name">l10n.es.account.genci.view.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//group[@id='other_tab_group']//field[@name='partner_bank_id']"
                position="after"
            >
                <field
                    name="is_genci"
                    attrs="{'readonly': [('state', '!=', 'draft')]}"
                    groups="l10n_es_genci_account.group_genci_enabled"
                />
            </xpath>
        </field>
    </record>
</odoo>
