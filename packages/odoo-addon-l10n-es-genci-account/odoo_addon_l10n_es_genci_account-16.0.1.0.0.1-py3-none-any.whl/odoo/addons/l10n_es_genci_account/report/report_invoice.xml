    <template id="report_invoice_document" inherit_id="account.report_invoice_document">
        <xpath expr="//td[@name='account_invoice_line_name']" position="inside">
            <t
                t-if="line.move_id.company_id.genci_enable
                    and line.move_id.company_id.genci_show_in_reports
                    and line.product_id
                    and line.product_id.genci_has_amount"
            >
                <br />
                <span style="font-size: 70%; opacity: 0.7;">
                    Contribución GENCI (RD 679/2006):
                    <span
                        t-field="line.genci_amount"
                        t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"
                    />
                </span>
            </t>
        </xpath>
    </template>
</odoo>
