# Miniflux TUI Configuration Example
# Copy this file to your config directory and rename it to config.toml

# Required: Your Miniflux server URL
server_url = "https://miniflux.example.com"

# Required: Command that prints your Miniflux API token
# This keeps your token in a secure password manager instead of on disk.
# The example below uses 1Password; replace it with your own command.
password = ["op", "read", "op://Personal/Miniflux/API Token"]

# Optional: Allow invalid SSL certificates (default: false)
# Set to true only if you're using self-signed certificates
allow_invalid_certs = false

[theme]
# Color for unread entries (default: cyan)
# Supported colors: black, red, green, yellow, blue, magenta, cyan, white, gray
# Or use hex colors like "#FF5733"
unread_color = "cyan"

# Color for read entries (default: gray)
read_color = "gray"

[sorting]
# Default sort mode: "feed", "date", or "status" (default: date)
default_sort = "date"

# Default grouping by feed (default: false)
# When true, entries will be grouped by feed name in the list
default_group_by_feed = false
