{
  "compilerOptions": {
    "declaration": true,
    "noImplicitAny": false,
    "noEmitOnError": true,
    "noUnusedLocals": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2018",
    "outDir": "./lib",
    "lib": [
      "ES2018",
      "DOM"
    ],
    "types": [],
    "jsx": "react",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": false,
    "resolveJsonModule": true
  },
  "include": [
    "src/*"
, "src/ChatWidget/utils", "src/ChatWidget/services"  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}