{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug All Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": ["-v", "--no-header"],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Debug Small Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": ["-m", "small", "-v", "--no-header"],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Debug Medium Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": ["-m", "medium", "-v", "--no-header"],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Debug Large Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": ["-m", "large or xlarge", "-v", "--no-header"],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Debug Current Test File",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": ["${file}", "-v", "--no-header"],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Debug Failed Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": ["--lf", "-v", "--no-header"],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Debug Test at Cursor",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": ["${file}::${selectedText}", "-v", "--no-header"],
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}
