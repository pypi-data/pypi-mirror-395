# 包含静态文件
recursive-include whoischarmen/communicate/centry/static *
recursive-include whoischarmen/communicate/centry/static/css *.css
recursive-include whoischarmen/communicate/centry/static/js *.js
recursive-include whoischarmen/communicate/centry/static/images *.png *.jpg *.jpeg *.gif *.ico
recursive-include whoischarmen/centry/web/web/dist *

# 包含文档文件
include *.md
include *.txt
include *.ini
include *.json
include *.yml
include *.yaml

# 排除不需要的文件
global-exclude *.pyc
global-exclude *.pyo
global-exclude __pycache__
global-exclude .git*
global-exclude .DS_Store