{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Documentation",
            "detail": "Build the Sphinx documentation",
            "type": "shell",
            "command": "uv run make -C docs html",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Clean Build Documentation",
            "detail": "Clean and build the Sphinx documentation",
            "type": "shell",
            "command": "uv run make -C docs clean html",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Run Pre-Commit Hooks",
            "detail": "Run pre-commit hooks on all files",
            "type": "shell",
            "command": "uv run pre-commit run --all-files",
            "group": {
                "kind": "test",
                "isDefault": false
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
        },
        {
            "label": "Run Mypy",
            "detail": "Run mypy static type checker on all files",
            "type": "shell",
            "command": "uv run mypy src/jaxgb",
            "group": {
                "kind": "test",
                "isDefault": false
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
        },
        {
            "label": "Run Pylint",
            "detail": "Run pylint formatter on all files",
            "type": "shell",
            "command": "uv run pylint src/jaxgb",
            "group": {
                "kind": "test",
                "isDefault": false
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
        },
        {
            "label": "Run Black",
            "detail": "Run black code formatter on all files",
            "type": "shell",
            "command": "uv run black .",
            "group": {
                "kind": "test",
                "isDefault": false
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
        },
        {
            "label": "Build Package",
            "detail": "Build package with uv",
            "type": "shell",
            "command": "uv build --verbose",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
        }
    ]
}
