# Include documentation and license
include README.md
include LICENSE
include ROADMAP.md
include pyproject.toml

# Include package data
recursive-include webhdfsmagic *.py

# Exclude development and temporary files
exclude .gitignore
exclude requirements.txt
recursive-exclude tests *
recursive-exclude demo *
