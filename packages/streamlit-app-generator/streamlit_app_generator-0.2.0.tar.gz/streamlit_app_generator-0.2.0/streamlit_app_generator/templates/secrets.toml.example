# =============================================================================
# STREAMLIT SECRETS CONFIGURATION
# =============================================================================
#
# Este arquivo contém as configurações secretas do Streamlit.
#
# IMPORTANTE:
# - Copie para .streamlit/secrets.toml e preencha com dados reais
# - Nunca commite secrets.toml no git
# - No Streamlit Cloud, use o painel de Secrets
#
# =============================================================================

# =============================================================================
# APP SETTINGS
# =============================================================================

[app]
name = "My Streamlit App"
environment = "development"
secret_key = "your-secret-key-change-this"

# =============================================================================
# AUTHENTICATION
# =============================================================================

[auth]
# Secret key para JWT tokens
secret_key = "your-jwt-secret-key"

# Timeout de sessão em segundos (3600 = 1 hora)
session_timeout = 3600

# Permitir auto-registro de usuários
allow_registration = false

# =============================================================================
# DATABASE - SQLITE (Padrão)
# =============================================================================
# SQLite não precisa de configurações adicionais
# Descomente para customizar:

# [database]
# type = "sqlite"
# database = "app.db"

# =============================================================================
# DATABASE - POSTGRESQL
# =============================================================================
# Descomente e preencha para usar PostgreSQL:

# [database]
# type = "postgresql"
# host = "localhost"
# port = 5432
# database = "myapp_db"
# username = "postgres"
# password = "your_password"
# schema = "public"
# pool_size = 10

# =============================================================================
# DATABASE - MYSQL
# =============================================================================
# Descomente e preencha para usar MySQL:

# [database]
# type = "mysql"
# host = "localhost"
# port = 3306
# database = "myapp_db"
# username = "root"
# password = "your_password"
# charset = "utf8mb4"

# =============================================================================
# DATABASE - MONGODB
# =============================================================================
# Descomente e preencha para usar MongoDB:

# [database]
# type = "mongodb"
# host = "localhost"
# port = 27017
# database = "myapp_db"
# username = "admin"
# password = "your_password"
# auth_source = "admin"

# Ou use connection string:
# connection_string = "mongodb://user:pass@localhost:27017/myapp_db"

# MongoDB Atlas (Cloud):
# connection_string = "mongodb+srv://user:pass@cluster.mongodb.net/myapp_db"

# =============================================================================
# DATABASE - REDIS
# =============================================================================
# Descomente e preencha para usar Redis:

# [database]
# type = "redis"
# host = "localhost"
# port = 6379
# password = "your_password"
# db = 0

# Ou use URL:
# url = "redis://:password@hostname:port/db"

# =============================================================================
# DATABASE - ORACLE
# =============================================================================
# Descomente e preencha para usar Oracle:

# [database]
# type = "oracle"
# username = "system"
# password = "your_password"
# dsn = "localhost:1521/XE"
# encoding = "UTF-8"

# =============================================================================
# EMAIL (Opcional)
# =============================================================================

# [email]
# smtp_host = "smtp.gmail.com"
# smtp_port = 587
# smtp_user = "your_email@gmail.com"
# smtp_password = "your_app_password"
# smtp_use_tls = true
# from_email = "noreply@yourapp.com"
# from_name = "My App"

# =============================================================================
# EXTERNAL APIS (Opcional)
# =============================================================================

# [apis]
# openai_api_key = "sk-..."
# google_maps_api_key = "..."
# stripe_public_key = "pk_..."
# stripe_secret_key = "sk_..."

# [aws]
# access_key_id = "..."
# secret_access_key = "..."
# s3_bucket = "your-bucket"
# region = "us-east-1"

# =============================================================================
# EXEMPLOS POR TIPO DE BANCO
# =============================================================================

# EXEMPLO 1: App simples com SQLite (padrão)
# ----------------------------------------
# [database]
# type = "sqlite"
# database = "app.db"

# EXEMPLO 2: App com PostgreSQL local
# ----------------------------------------
# [database]
# type = "postgresql"
# host = "localhost"
# port = 5432
# database = "meu_app"
# username = "postgres"
# password = "senha123"

# EXEMPLO 3: App com MySQL em produção
# ----------------------------------------
# [database]
# type = "mysql"
# host = "db.production.com"
# port = 3306
# database = "prod_db"
# username = "app_user"
# password = "strong_password_here"

# EXEMPLO 4: App com MongoDB Atlas (Cloud)
# ----------------------------------------
# [database]
# type = "mongodb"
# connection_string = "mongodb+srv://user:pass@cluster.mongodb.net/mydb?retryWrites=true&w=majority"

# EXEMPLO 5: App com Redis para cache
# ----------------------------------------
# [database]
# type = "redis"
# host = "redis-12345.cloud.redislabs.com"
# port = 12345
# password = "redis_password"

# =============================================================================
# NOTAS IMPORTANTES
# =============================================================================
#
# 1. STREAMLIT CLOUD:
#    - Vá em Settings > Secrets
#    - Cole o conteúdo deste arquivo (sem comentários)
#    - Clique em Save
#
# 2. DESENVOLVIMENTO LOCAL:
#    - Copie para .streamlit/secrets.toml
#    - Edite com suas credenciais locais
#
# 3. PRODUÇÃO:
#    - Use credenciais diferentes de desenvolvimento
#    - Considere usar variáveis de ambiente
#    - Ou serviços de secrets management
#
# 4. FORMATO TOML:
#    - Use aspas duplas para strings
#    - Números sem aspas
#    - Booleanos: true ou false (minúsculas)
#
# =============================================================================
