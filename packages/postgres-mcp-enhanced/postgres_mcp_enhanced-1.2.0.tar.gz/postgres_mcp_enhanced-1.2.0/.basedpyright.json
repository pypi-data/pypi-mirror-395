{
  "include": ["src", "*.py"],
  "exclude": ["tests/**", "**/__pycache__", ".venv/**", "build/**", "dist/**"],
  "typeCheckingMode": "strict",
  "reportMissingTypeStubs": false,
  "reportUnknownVariableType": false,
  "pythonVersion": "3.13",
  "pythonPlatform": "All",
  "extraPaths": ["src"],
  "executionEnvironments": [
    {
      "root": ".",
      "pythonVersion": "3.13",
      "pythonPlatform": "All",
      "extraPaths": ["src"]
    }
  ]
}

