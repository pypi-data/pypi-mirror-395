# Include essential files
include LICENSE
include README.md
include pyproject.toml
include metsuperq/py.typed

# Include type stubs
recursive-include metsuperq *.pyi

# Exclude development/CI files from sdist
exclude .gitignore
exclude .gitlab-ci.yml
exclude .pre-commit-config.yaml
exclude pyrightconfig.json
exclude uv.lock
prune .ci
prune .github

# Exclude documentation (available online)
prune docs

# Exclude test data and fixtures
prune data
prune tests

# Exclude example notebooks (available in repo)
prune examples

# Exclude data files that may be in package dir
recursive-exclude metsuperq *.ipynb
recursive-exclude metsuperq *.hdf5
recursive-exclude metsuperq *.db
recursive-exclude metsuperq *.db-shm
recursive-exclude metsuperq *.db-wal
