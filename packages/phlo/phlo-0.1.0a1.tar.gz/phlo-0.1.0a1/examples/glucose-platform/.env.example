# Phlo Configuration
PHLO_WORKFLOWS_PATH=workflows

# Database Configuration
POSTGRES_PASSWORD=your_password_here
MINIO_ROOT_PASSWORD=your_password_here

# Optional: Override dbt location
# PHLO_DBT_PROJECT_DIR_OVERRIDE=custom_dbt

# Optional: Include core examples
# PHLO_INCLUDE_CORE_ASSETS=false

# Nightscout API for glucose data
NIGHTSCOUT_URL=https://your-nightscout-instance.herokuapp.com
NIGHTSCOUT_API_SECRET=your-api-secret-here

# Observability & Alerting Configuration
# Slack alerting (optional)
PHLO_ALERT_SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
PHLO_ALERT_SLACK_CHANNEL=#glucose-alerts

# PagerDuty alerting (optional)
PHLO_ALERT_PAGERDUTY_KEY=your-pagerduty-integration-key

# Email alerting (optional)
PHLO_ALERT_EMAIL_SMTP_HOST=smtp.example.com
PHLO_ALERT_EMAIL_SMTP_PORT=587
PHLO_ALERT_EMAIL_USERNAME=alerts@example.com
PHLO_ALERT_EMAIL_PASSWORD=your-password
PHLO_ALERT_EMAIL_RECIPIENTS=team@example.com,ops@example.com

# OpenMetadata Catalog (optional)
OPENMETADATA_HOST=http://localhost:8585
OPENMETADATA_API_VERSION=v1
