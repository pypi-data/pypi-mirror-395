# ============================================================================
# API Configuration (for data fetching from exchanges)
# ============================================================================
API_KEY=your_api_key_here
API_SECRET=your_api_secret_here

# ============================================================================
# InfluxDB Configuration (1.6)
# ============================================================================
# The host where InfluxDB is running
INFLUXDB_HOST=localhost

# The port InfluxDB is listening on (default: 8086)
INFLUXDB_PORT=8086

# The database name to use for market data
INFLUXDB_DATABASE=market_data

# InfluxDB username (optional, leave empty if not using authentication)
INFLUXDB_USERNAME=

# InfluxDB password (optional, leave empty if not using authentication)
INFLUXDB_PASSWORD=

# Batch size for writing to InfluxDB
# Start with 2 for testing, increase to 100, 500, 1000, etc. for production
INFLUXDB_BATCH_SIZE=2

# ============================================================================
# Data Collection Configuration
# ============================================================================
# Base coin for analysis (used by strangeler strategy)
BASE_COIN=BTC

# Number of days of historical data to fetch
DAYS=10

# Resolution for OHLCV data in minutes (60 = 1 hour)
RESOLUTION_KLINE=60

# Resolution for IV/DVOL data in minutes (60 = 1 hour)
RESOLUTION_IV=60

# ============================================================================
# Logging Configuration
# ============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path
LOG_FILE=/var/log/market_data/collector.log
