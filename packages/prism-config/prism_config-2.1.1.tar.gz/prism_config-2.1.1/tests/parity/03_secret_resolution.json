{
  "name": "secret_resolution_env_provider",
  "description": "Validates that REF::ENV:: secret references are resolved correctly from environment variables",
  "config": {
    "app": {
      "name": "secure-app",
      "environment": "production",
      "api_key": "REF::ENV::API_KEY"
    },
    "database": {
      "host": "db.example.com",
      "port": 5432,
      "name": "prod_db",
      "password": "REF::ENV::DB_PASSWORD"
    }
  },
  "secrets": {
    "ENV::API_KEY": "sk_live_test_key_12345",
    "ENV::DB_PASSWORD": "super_secret_password_789"
  },
  "options": {
    "apply_env": false,
    "resolve_secrets": true
  },
  "expected": {
    "app.name": "secure-app",
    "app.environment": "production",
    "app.api_key": "sk_live_test_key_12345",
    "database.host": "db.example.com",
    "database.port": 5432,
    "database.name": "prod_db",
    "database.password": "super_secret_password_789"
  }
}
