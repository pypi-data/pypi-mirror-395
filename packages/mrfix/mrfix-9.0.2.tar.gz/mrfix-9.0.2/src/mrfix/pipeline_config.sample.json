{
  "log_dir": "/tmp/qa_logs",
  "working_dir": "/tmp",
  "git": {
    "repo_dir": "/home/admin/Documents/TestVM/ForRunAllTests",
    "remote_url": "git@bitbucket.org:sq/sequoia-qa.git",
    "branch": "DEV",
    "depth": 1
  },
  "deps": {
    "install": false,
    "requirements_file": "requirements.txt",
    "pip_executable": null,
    "timeout": 900,
    "kill_after": 30
  },
  "pytest": {
    "python_executable": null,
    "additional_args": [
      "-q",
      "-ra",
      "--maxfail=1"
    ],
    "xdist_workers": 8,
    "xdist_dist": "load",
    "junit_xml": "reports/junit.xml",
    "timeout": 1800,
    "kill_after": 30,
    "tests_root": "tests",
    "env": {
      "PYTHONUNBUFFERED": "1"
    }
  },
  "rerun_failed": {
    "enabled": true,
    "command": [
      "python",
      "run_failed_tests.py"
    ],
    "timeout": 1200,
    "kill_after": 30
  },
  "av_scan": {
    "enabled": false,
    "paths": [
      "./ALL_TESTS_LOG"
    ],
    "timeout": 1800,
    "kill_after": 30
  },
  "archive": {
    "enabled": true,
    "paths": [
      "./ALL_TESTS_LOG",
      "./reports"
    ],
    "output_zip": null
  },
  "extra_env": {
    "LANG": "C.UTF-8",
    "LC_ALL": "C.UTF-8"
  }
}