{
  "openapi": "3.0.0",
  "info": {
    "title": "Ioc Search",
    "version": "1.0.0",
    "description": "RapidAPI: crawlsnap/ioc-search"
  },
  "servers": [
    {
      "url": "https://ioc-search.p.rapidapi.com"
    }
  ],
  "paths": {
    "/rapid/v1/ioc/search/ip": {
      "get": {
        "summary": "IP Address Search",
        "description": "Provides comprehensive analysis for a given IP address, including associated ASN, geographic location, network details, WHOIS information, and security vendor evaluations. Summarizes malicious, suspicious, harmless, and undetected classifications, enabling effective threat detection and risk assessment.",
        "operationId": "ip_address_search",
        "parameters": [
          {
            "name": "query",
            "in": "query",
            "required": false,
            "description": "Example value: 117.131.215.118",
            "schema": {
              "type": "string",
              "default": null,
              "enum": null
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {}
              }
            }
          }
        }
      }
    },
    "/rapid/v1/ioc/search/hash": {
      "get": {
        "summary": "Hash Search",
        "description": "Provides detailed threat analysis for a given hash, including analysis date, reputation, categories, security vendor assessments, threat names, and URL details. Detects malware, suspicious activity, and clean results from various security vendors with statistical summaries.",
        "operationId": "hash_search",
        "parameters": [
          {
            "name": "query",
            "in": "query",
            "required": false,
            "description": "Example value: 0000059fcb7d4275e2019593617f3b9c8aa568792e3eaf035420ed7dbffd44bc",
            "schema": {
              "type": "string",
              "default": null,
              "enum": null
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {}
              }
            }
          }
        }
      }
    },
    "/rapid/v1/ioc/search/domain": {
      "get": {
        "summary": "Domain Search",
        "description": "Analyzes a given domain to provide insights into DNS records, HTTP certificate details, reputation, security vendor evaluations, and related tags. Includes detailed security classifications and supports identifying malicious or suspicious domains effectively.",
        "operationId": "domain_search",
        "parameters": [
          {
            "name": "query",
            "in": "query",
            "required": false,
            "description": "Example value: tracking-usopt-cr.com",
            "schema": {
              "type": "string",
              "default": null,
              "enum": null
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {}
              }
            }
          }
        }
      }
    },
    "/rapid/v1/ioc/search/url": {
      "get": {
        "summary": "URL Search",
        "description": "Provides in-depth threat analysis for a given URL, including reputation scores, categories, security vendor evaluations, threat names, and metadata. Offers detailed insights into malicious, suspicious, and harmless classifications from various sources, helping to identify potential risks effectively.",
        "operationId": "url_search",
        "parameters": [
          {
            "name": "query",
            "in": "query",
            "required": false,
            "description": "Example value: http://2.56.56.117/zato/Josho.spc",
            "schema": {
              "type": "string",
              "default": null,
              "enum": null
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {}
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "ApiAuth": {
        "type": "apiKey",
        "in": "header",
        "name": "X-RapidAPI-Key"
      }
    }
  },
  "security": [
    {
      "ApiAuth": []
    }
  ]
}