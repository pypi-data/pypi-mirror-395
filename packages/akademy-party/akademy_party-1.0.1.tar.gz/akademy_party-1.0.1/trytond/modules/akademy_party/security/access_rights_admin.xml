<!-- GRUPO DE PERMIÇÕES PARA USUÁRIOS ADMINISTRADORES -->
<tryton>
    <data>
        <!-- Criar o grupo de usuários administrador -->
        <record model="res.group" id="group_akademy_admin">
            <field name="name">Akademy Admin</field>
        </record>

        <!-- Atribui o usuário Administrador do Tryton
         ao grupo de usuários Administrador Akademy -->
        <record model="res.user-res.group" 
            id="akademy_party-tryton_admin">
            <field name="user" ref="res.user_admin"/>
            <field name="group" ref="group_akademy_admin"/>
        </record>        

        <!-- Acesso ao menu PARTY -->
        <record model="ir.ui.menu-res.group" 
            id="akademy_party-group_akademy_admin">
            <field name="menu" ref="akademy_party"/>
            <field name="group" ref="group_akademy_admin"/>
        </record>
        <record model="ir.ui.menu-res.group" 
            id="menu_party-group_akademy_admin">
            <field name="menu" ref="party.menu_party"/>
            <field name="group" ref="group_akademy_admin"/>
        </record>

        <!-- Definição de Regras de Acesso aos Modelos -->
        <!-- Modelo PARTY -->
        <record model="ir.model.access" 
            id="access_akademy_entities-group_akademy_admin">
            <field name="model" search="[('model', '=', 'party.party')]"/>
            <field name="group" ref="group_akademy_admin"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_delete" eval="True"/>
        </record>
        <!-- access rule group -->
        <record model="ir.rule.group" 
            id="rule_group_akademy_entities-group_akademy_admin">
            <field name="name">Entidades</field>
            <field name="model" 
                search="[('model', '=', 'party.party')]"/>
            <field name="global_p" eval="False"/>
            <field name="default_p" eval="False"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_delete" eval="True"/>
        </record>
        <!--
        <record model="ir.rule" id="rule_group_akademy_entities_line1">
            <field name="domain" pyson="1" 
                eval="[('company', '=', Eval('user', {}).get('company', None))]" />
            <field name="rule_group" ref="rule_group_akademy_entities-group_akademy_admin"/>
        </record>
        -->
        <record model="ir.rule.group-res.group" 
            id="res_group_akademy_entities-group_akademy_admin">
            <field name="rule_group" ref="rule_group_akademy_entities-group_akademy_admin"/>
            <field name="group" ref="group_akademy_admin"/>
        </record>
        
    </data>
</tryton>