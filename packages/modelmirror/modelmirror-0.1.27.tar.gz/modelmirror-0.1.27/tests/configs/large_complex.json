{
    "primary_database": {
        "$mirror": "database_service:primary_db",
        "host": "large.db.example.com",
        "port": 5432,
        "database_name": "large_app"
    },
    "secondary_database": {
        "$mirror": "database_service",
        "host": "large-secondary.db.example.com",
        "port": 5432,
        "database_name": "large_secondary"
    },
    "user_service": {
        "$mirror": "user_service",
        "database": "$primary_db",
        "cache_enabled": true
    },
    "microservices": [
        {
            "$mirror": "simple_service",
            "name": "service_1"
        },
        {
            "$mirror": "simple_service",
            "name": "service_2"
        }
    ],
    "service_registry": {
        "main": {
            "$mirror": "simple_service",
            "name": "main_service"
        }
    },
    "orchestrator": {
        "$mirror": "complex_service",
        "database": "$primary_db",
        "user_service": {
            "$mirror": "user_service",
            "database": "$primary_db",
            "cache_enabled": true
        },
        "config": {
            "large": "true"
        }
    },
    "environment": "performance_test",
    "debug_mode": false
}
