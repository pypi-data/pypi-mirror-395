{
    "core_system": {
        "$mirror": "complex_service",
        "database": {
            "$mirror": "database_service",
            "host": "core.db.example.com",
            "port": 5432,
            "database_name": "core_system"
        },
        "user_service": {
            "$mirror": "user_service",
            "database": {
                "$mirror": "database_service",
                "host": "users.db.example.com",
                "port": 5432,
                "database_name": "users"
            },
            "cache_enabled": true
        },
        "config": {
            "plugin_enabled": "true"
        }
    },
    "plugins": [
        {
            "$mirror": "simple_service",
            "name": "auth_plugin"
        },
        {
            "$mirror": "simple_service",
            "name": "logging_plugin"
        },
        {
            "$mirror": "simple_service",
            "name": "metrics_plugin"
        }
    ]
}
