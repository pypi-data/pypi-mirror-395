{
    "primary_database": {
        "$mirror": "database_service:primary_db",
        "host": "composition.db.example.com",
        "port": 5432,
        "database_name": "composition"
    },
    "secondary_database": {
        "$mirror": "database_service",
        "host": "composition-secondary.db.example.com",
        "port": 5432,
        "database_name": "composition_secondary"
    },
    "user_service": {
        "$mirror": "user_service:main_user_service",
        "database": "$primary_db",
        "cache_enabled": true
    },
    "microservices": [
        {
            "$mirror": "simple_service",
            "name": "composition_service"
        }
    ],
    "service_registry": {
        "main": {
            "$mirror": "simple_service",
            "name": "main_service"
        }
    },
    "orchestrator": {
        "$mirror": "complex_service",
        "database": "$primary_db",
        "user_service": "$main_user_service",
        "config": {
            "composition": "true"
        }
    },
    "environment": "composition_test",
    "debug_mode": false
}
