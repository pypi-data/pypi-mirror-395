{
    "primary_database": {
        "$mirror": "database_service:primary_db",
        "host": "localhost",
        "port": 5432,
        "database_name": "app_dev"
    },
    "secondary_database": {
        "$mirror": "database_service",
        "host": "localhost",
        "port": 5433,
        "database_name": "app_dev_secondary"
    },
    "user_service": {
        "$mirror": "user_service",
        "database": "$primary_db",
        "cache_enabled": false
    },
    "microservices": [
        {
            "$mirror": "simple_service",
            "name": "dev_service_1"
        }
    ],
    "service_registry": {
        "test": {
            "$mirror": "simple_service",
            "name": "test_service"
        }
    },
    "orchestrator": {
        "$mirror": "complex_service",
        "database": "$primary_db",
        "user_service": {
            "$mirror": "user_service",
            "database": "$primary_db",
            "cache_enabled": true
        },
        "config": {
            "debug": "true"
        }
    },
    "environment": "development",
    "debug_mode": true
}
