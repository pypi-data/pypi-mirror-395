{
  "openapi": "3.0.0",
  "info": {
    "title": "Cocktail By Api Ninjas",
    "version": "1.0.0",
    "description": "RapidAPI: apininjas/cocktail-by-api-ninjas"
  },
  "servers": [
    {
      "url": "https://cocktail-by-api-ninjas.p.rapidapi.com"
    }
  ],
  "paths": {
    "/v1/cocktail": {
      "get": {
        "summary": "/v1/cocktail",
        "description": "API Ninjas Cocktail API endpoint. Either **name** or **ingredients** parameter must be set.",
        "operationId": "/v1/cocktail",
        "parameters": [
          {
            "name": "name",
            "in": "query",
            "required": false,
            "description": "name of cocktail. This parameter supports partial matches (e.g. bloody will match bloody mary and bloody margarita)",
            "schema": {
              "type": "string",
              "default": null,
              "enum": null
            }
          },
          {
            "name": "ingredients",
            "in": "query",
            "required": false,
            "description": "comma-separated string of ingredients to search. Only cocktails containing all listed ingredients will be returned. For example, to search cocktails containing Vodka and lemon juice, use vodka,lemon juice.",
            "schema": {
              "type": "string",
              "default": null,
              "enum": null
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {}
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "ApiAuth": {
        "type": "apiKey",
        "in": "header",
        "name": "X-RapidAPI-Key"
      }
    }
  },
  "security": [
    {
      "ApiAuth": []
    }
  ]
}