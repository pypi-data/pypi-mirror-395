# Include documentation
include README.md
include LICENSE
include CHANGELOG.md
include energy_derivatives/README.md

# Include all documentation
recursive-include energy_derivatives/docs *.md *.rst

# Include test data
recursive-include energy_derivatives/tests *.py *.json *.csv

# Include configuration examples
include energy_derivatives/*.yaml
include energy_derivatives/*.toml
include energy_derivatives/*.ini

# Exclude development files
global-exclude __pycache__
global-exclude *.py[co]
global-exclude *.so
global-exclude .DS_Store
