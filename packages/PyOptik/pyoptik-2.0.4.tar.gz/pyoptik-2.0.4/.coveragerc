# .coveragerc
[run]
source = PyOptik
branch = True
relative_files = True
parallel = True
omit =
    **/__init__.py
    PyOptik/_version.py
    PyOptik/directories.py
    PyOptik/**/__main__.py

[report]
skip_covered = True
show_missing = True
precision = 2

[html]
directory = htmlcov

[xml]
output = coverage.xml
