<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <field name="module_product_expiry" position="after">
                <div class="row mt-2" invisible="not group_stock_production_lot">
                    <field
                        name="product_ignore_expiration_date"
                        class="col flex-grow-0 ml16 mr0 pe-2"
                    />
                    <div class="col ps-0">
                        <label for="product_ignore_expiration_date" />
                        <div
                            class="text-muted"
                        >Force the reservation of expired lots.</div>
                    </div>
                </div>
            </field>
        </field>
    </record>
</odoo>
