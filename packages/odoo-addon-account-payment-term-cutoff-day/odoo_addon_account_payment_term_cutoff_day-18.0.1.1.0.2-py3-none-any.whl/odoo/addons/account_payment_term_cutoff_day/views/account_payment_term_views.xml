<odoo>
    <record id="view_payment_term_form" model="ir.ui.view">
        <field name="name">account.payment.term.form</field>
        <field name="model">account.payment.term</field>
        <field name="inherit_id" ref="account.view_payment_term_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='nb_days']" position="before">
                <field name="has_cutoff_day" widget="boolean_toggle" />
                <field
                    name="cutoff_day"
                    readonly="not has_cutoff_day"
                    invisible="not has_cutoff_day"
                />
                <field
                    name="months"
                    readonly="not has_cutoff_day"
                    invisible="not has_cutoff_day"
                />
            </xpath>
            <field name="delay_type" position='attributes'>
                <attribute name="readonly">has_cutoff_day</attribute>
                <attribute name="invisible">has_cutoff_day</attribute>
            </field>
        </field>
    </record>
</odoo>
