<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="helpdesk_ticket_priority_filter.res_config_settings_view_form" model="ir.ui.view">
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="helpdesk_mgmt.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='helpdesk_mgmt']" position="inside">
                <h2>High Priority Tickets</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <label for="high_priority_levels" string="High Priority Tickets"/>
                            <div class="text-muted">
                                Priority values separated by commas (e.g., 2,3).
                            </div>
                            <field name="high_priority_levels" class="o_input_9ch"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
