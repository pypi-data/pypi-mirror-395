#!/usr/bin/env python3
"""
Run the Flask application.

Usage:
    python run.py

For production, use a WSGI server like gunicorn:
    gunicorn -w 4 -b 0.0.0.0:8000 "app:create_app()"
"""

from app import create_app

app = create_app()

if __name__ == "__main__":
    app.run(
        host="0.0.0.0",
        port=8000,
        debug=True,
    )
