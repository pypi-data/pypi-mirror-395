{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Commands Configuration",
    "description": "Mapping of command names to their categories and tags",
    "type": "object",
    "properties": {
        "commands": {
            "type": "object",
            "description": "Command definitions",
            "patternProperties": {
                "^[a-z0-9-]+$": {
                    "type": "object",
                    "properties": {
                        "category": {
                            "type": "string",
                            "description": "Category this command belongs to"
                        },
                        "tags": {
                            "type": "array",
                            "description": "Tags to automatically apply",
                            "items": {
                                "type": "string"
                            }
                        }
                    },
                    "required": [
                        "category"
                    ],
                    "additionalProperties": false
                }
            }
        }
    },
    "required": [
        "commands"
    ],
    "additionalProperties": false
}