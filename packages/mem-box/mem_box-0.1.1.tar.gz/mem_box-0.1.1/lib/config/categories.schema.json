{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Categories Configuration",
    "description": "Definition of command categories",
    "type": "object",
    "properties": {
        "categories": {
            "type": "object",
            "description": "Category definitions",
            "patternProperties": {
                "^[a-z-]+$": {
                    "type": "object",
                    "properties": {
                        "description": {
                            "type": "string",
                            "description": "Human-readable description"
                        },
                        "color": {
                            "type": "string",
                            "description": "Display color for UI"
                        }
                    },
                    "required": [
                        "description"
                    ],
                    "additionalProperties": false
                }
            }
        }
    },
    "required": [
        "categories"
    ],
    "additionalProperties": false
}