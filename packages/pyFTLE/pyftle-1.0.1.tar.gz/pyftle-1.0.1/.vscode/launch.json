{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceRoot}"
            },
            "args": [
                // # logger parameters
                "--experiment_name=example",
                //
                // # input parameters
                "--list_velocity_files=inputs_velocity.txt",
                "--list_grid_files=inputs_grid.txt",
                "--list_particle_files=inputs_particle.txt",
                "--snapshot_timestep=-0.12271846303061551",
                "--flow_map_period=5.0",
                "--integrator=rk4",
                "--interpolator=cubic",
                "--num_processes=6"
                "--output_format=vtk",
                // "--flow_grid_shape=128,128,256", //, 256  # comment this line for unstructured data"
                // "--particles_grid_shape=128,128,256" //, 256  # comment this line for unstructured d
            ],
            "purpose": [
                "debug-in-terminal"
            ]
        },
        {
            "name": "Debug Pytest: Current Test File",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}" // Adjust if your PYTHONPATH is different
            },
            "args": [
                "-s",
                "${file}" // Runs the currently open test file
            ],
            "purpose": [
                "debug-in-terminal"
            ]
        },
        {
            "name": "Debug Pytest: Specific Test",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}" // Adjust if your PYTHONPATH is different
            },
            "args": [
                "tests/test_integration.py::test_tgv_laplacian_integration_finite_diff" // Replace with specific test path
            ],
            "purpose": [
                "debug-in-terminal"
            ]
        }
    ]
}
