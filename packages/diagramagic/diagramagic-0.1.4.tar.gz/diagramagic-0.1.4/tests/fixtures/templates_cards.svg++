<diag:diagram
  xmlns="http://www.w3.org/2000/svg"
  xmlns:diag="https://example.com/diag"
  diag:font-family="sans-serif"
>
  <style>
    .board { fill: #f5f5f5; stroke: #d0d7de; stroke-width: 1.2; }
    .card { fill: #ffffff; stroke: #8b949e; stroke-width: 1.1; rx: 8; ry: 8; }
    .title { font-size: 14; font-weight: 600; }
    .body { font-size: 12; }
  </style>

  <diag:template name="kanban-card">
    <diag:flex width="220" direction="column" padding="12" gap="6" background-class="card">
      <text class="title" diag:wrap="false"><diag:slot name="title" /></text>
      <text class="body" diag:wrap="true"><diag:slot name="body" /></text>
    </diag:flex>
  </diag:template>

  <diag:flex
    x="24"
    y="24"
    direction="column"
    gap="12"
    padding="16"
    background-class="board"
  >
    <diag:instance template="kanban-card" x="0" y="0">
      <diag:param name="title">Plan</diag:param>
      <diag:param name="body">Outline the sequence and identify dependencies for the release.</diag:param>
    </diag:instance>

    <diag:instance template="kanban-card" x="0" y="0">
      <diag:param name="title">Build</diag:param>
      <diag:param name="body">Implement features, keep QA in the loop, and update status daily.</diag:param>
    </diag:instance>

    <diag:instance template="kanban-card" x="0" y="0">
      <diag:param name="title">Launch</diag:param>
      <diag:param name="body">Coordinate comms, monitor metrics, and prepare rollback instructions.</diag:param>
    </diag:instance>
  </diag:flex>
</diag:diagram>
