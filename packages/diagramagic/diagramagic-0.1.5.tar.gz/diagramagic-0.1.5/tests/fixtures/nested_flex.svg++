<diag:diagram
  xmlns="http://www.w3.org/2000/svg"
  xmlns:diag="https://example.com/diag"
  width="420"
  height="260"
  viewBox="0 0 420 260"
>
  <style>
    .board { fill:#f5f8ff; stroke:#ccd6ff; stroke-width:1.2; }
    .lane { fill:#fff; stroke:#9ba7bd; stroke-width:1; rx:6; ry:6; }
    .title { font-size:14; font-weight:600; }
    .body { font-size:12; }
  </style>

  <diag:flex x="24" y="24" width="372" direction="row" gap="16" padding="16" background-class="board">
    <diag:flex width="160" direction="column" padding="12" gap="8" background-class="lane">
      <text class="title" diag:wrap="false">Backlog</text>
      <text class="body" diag:wrap="true">Collect feedback and create TODO cards.</text>
    </diag:flex>

    <diag:flex width="160" direction="column" padding="12" gap="8" background-class="lane">
      <text class="title" diag:wrap="false">In Progress</text>
      <diag:flex width="136" direction="column" padding="8" gap="4" background-class="lane">
        <text class="body" diag:wrap="true">Implement svg++ templates.</text>
        <text class="body" diag:wrap="true">Polish CLI UX.</text>
      </diag:flex>
    </diag:flex>
  </diag:flex>
</diag:diagram>
