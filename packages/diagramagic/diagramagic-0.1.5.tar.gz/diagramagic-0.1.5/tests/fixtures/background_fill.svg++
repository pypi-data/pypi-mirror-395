<diag:diagram
  xmlns="http://www.w3.org/2000/svg"
  xmlns:diag="https://example.com/diag"
  diag:background="#f7f7ff"
>
  <style>
    .box { fill: #fff; stroke: #555; stroke-width: 1.2; rx: 6; ry: 6; }
    .label { font-size: 14; font-weight: 600; }
  </style>

  <diag:flex
    x="10"
    y="20"
    width="200"
    direction="column"
    gap="8"
    padding="10"
    background-class="box"
  >
    <text class="label" diag:wrap="false">Background</text>
    <text diag:wrap="true">
      This fixture sets diag:background on the root to ensure the renderer emits a canvas fill.
    </text>
  </diag:flex>
</diag:diagram>
