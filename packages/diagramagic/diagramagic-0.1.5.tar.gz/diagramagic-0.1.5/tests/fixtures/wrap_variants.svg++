<diag:diagram
  xmlns="http://www.w3.org/2000/svg"
  xmlns:diag="https://example.com/diag"
  width="340"
  height="180"
  viewBox="0 0 340 180"
>
  <style>
    .panel { fill:#fff; stroke:#d0d7de; stroke-width:1.2; rx:8; ry:8; }
    .label { font-size:13; font-weight:600; }
    .body { font-size:12; }
  </style>

  <diag:flex
    x="20"
    y="20"
    width="300"
    direction="column"
    padding="14"
    gap="12"
    background-class="panel"
  >
    <text class="label" diag:wrap="false">Unwrapped</text>
    <text class="body" diag:wrap="false">
      This sentence keeps going and will overflow the panel width unless the viewer wraps it.
    </text>

    <text class="label" diag:wrap="false">Wrapped</text>
    <text class="body" diag:wrap="true">
      This sentence is wrapped by the renderer so it always fits within the container.
    </text>
  </diag:flex>
</diag:diagram>
