# .coveragerc
[run]
source = MPSPlots
branch = True
relative_files = True
parallel = True
omit =
    **/__init__.py
    MPSPlots/_version.py
    MPSPlots/directories.py
    MPSPlots/**/__main__.py

[report]
skip_covered = True
show_missing = True
precision = 2

[html]
directory = htmlcov

[xml]
output = coverage.xml
