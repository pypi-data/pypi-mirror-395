# Django Core Settings
# --------------------
DEBUG=True
SECRET_KEY=change-this-to-a-secure-random-key-in-production

# Allowed hosts (comma-separated for multiple)
ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# Database Configuration
# =============================================================================
# SQLite (Development):
DATABASE_URL=sqlite:///db.sqlite3

# PostgreSQL (Production):
# DATABASE_URL=postgres://user:password@localhost:5432/{{ project_name }}

# MySQL:
# DATABASE_URL=mysql://user:password@localhost:3306/{{ project_name }}

# =============================================================================
# Email Configuration
# =============================================================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=

# Default from email
DEFAULT_FROM_EMAIL=noreply@example.com

# =============================================================================
# Security Settings (Production)
# =============================================================================
# Uncomment these in production with HTTPS

# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
# SECURE_HSTS_SECONDS=31536000

# Trusted origins for CSRF (comma-separated)
CSRF_TRUSTED_ORIGINS=

# =============================================================================
# Cache Configuration
# =============================================================================
# Local memory (Development):
CACHE_URL=locmem://

# Redis (Production):
# CACHE_URL=redis://127.0.0.1:6379/1

