{
  "dataset": {
    "path": "data/hotel_bookings_processed.csv",
    "type": "csv",
    "target_column": "is_canceled",
    "features": null
  },
  "model": {
    "type": "tf_dnn",
    "params": {
      "layers": [128, 64, 32],
      "activation": "relu",
      "dropout": 0.3,
      "optimizer": "adam",
      "learning_rate": 0.001
    }
  },
  "training": {
    "test_size": 0.2,
    "random_state": 42,
    "shuffle": true,
    "epochs": 50,
    "batch_size": 64,
    "validation_split": 0.2,
    "early_stopping": true,
    "patience": 5
  },
  "evaluation": {
    "metrics": ["accuracy", "precision", "recall", "f1", "auc"]
  },
  "output": {
    "model_dir": "mlcli/models",
    "model_name": "hotel_dnn",
    "save_format": ["h5", "savedmodel"],
    "log_dir": "runs"
  }
}
