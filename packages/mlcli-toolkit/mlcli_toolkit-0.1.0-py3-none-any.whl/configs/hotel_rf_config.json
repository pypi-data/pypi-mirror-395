{
  "dataset": {
    "path": "data/hotel_bookings_processed.csv",
    "type": "csv",
    "target_column": "is_canceled",
    "features": null
  },
  "model": {
    "type": "random_forest",
    "params": {
      "n_estimators": 100,
      "max_depth": 15,
      "min_samples_split": 5,
      "min_samples_leaf": 2,
      "random_state": 42,
      "n_jobs": -1
    }
  },
  "training": {
    "test_size": 0.2,
    "random_state": 42,
    "shuffle": true
  },
  "evaluation": {
    "metrics": ["accuracy", "precision", "recall", "f1", "auc"]
  },
  "output": {
    "model_dir": "mlcli/models",
    "model_name": "hotel_rf",
    "save_format": ["pickle", "onnx"],
    "log_dir": "runs"
  }
}
