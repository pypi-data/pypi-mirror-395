{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    "github>aquaproj/aqua-renovate-config#2.9.0",
    "github>attakei/workspace-configs//renovate/lefthook",
    "github>attakei/workspace-configs//renovate/taskfile",
  ],
  "timezone": "Asia/Tokyo",
  "schedule": [
    "* 20-23 * * 1-5",
    "* 9-21 * * 0,6",
  ],
  "automerge": true,
  "packageRules": [
    {
      "matchPackageNames": ["attakei/workspace-configs"],
      "groupName": "workspace-configs",
      "matchUpdateTypes": ["major", "minor"],
      "enabled": true,
    },
    {
      "matchPackageNames": ["attakei/workspace-configs"],
      "matchUpdateTypes": ["patch"],
      "enabled": false,
    },
    // NOTE: Workflow's python version must be kept because it is minimum require-python version.
    {
      "matchFileNames": [".python-version"],
      "enabled": false,
    },
    // NOTE: Require approve when it updates major version of deps
    {
      "matchDatasources": ["npm"],
      "automerge": false,
    },
  ],
}
