                                        <span class="text-xs text-slate-400">{{ step.duration }}s</span>
                                        {% if step.status == 'passed' %}
                                        <svg class="w-4 h-4 text-emerald-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                                        </svg>
                                        {% else %}
                                        <svg class="w-4 h-4 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                                        </svg>
                                        {% endif %}
                                    </div>
                                    {% endfor %}
                                </div>
                            </div>
                            {% endif %}
                            
                            <!-- Screenshots -->
                            {% if test.screenshots %}
                            <div class="mb-4">
                                <h4 class="text-sm font-semibold text-slate-700 dark:text-slate-300 mb-2 flex items-center gap-2">
                                    <svg class="w-4 h-4 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                                    </svg>
                                    Screenshots
                                </h4>
                                <div class="flex gap-3 flex-wrap">
                                    {% for screenshot in test.screenshots %}
                                    <a href="{{ screenshot }}" target="_blank" class="block">
                                        <img src="{{ screenshot }}" alt="Screenshot {{ loop.index }}" 
                                             class="h-20 w-auto rounded-lg border-2 border-slate-200 dark:border-slate-700 screenshot-thumb shadow-lg">
                                    </a>
                                    {% endfor %}
                                </div>
                            </div>
                            {% endif %}
                            
                            <!-- Error -->
                            {% if test.longrepr %}
                            <div class="bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-xl p-4 mb-4">
                                <div class="flex items-center justify-between mb-2">
                                    <h4 class="text-sm font-semibold text-red-700 dark:text-red-300 flex items-center gap-2">
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                        </svg>
                                        Error Details
                                    </h4>
                                    <button @click="navigator.clipboard.writeText(`{{ test.longrepr | replace('`', '\\`') | replace('\n', '\\n') }}`)" 
                                            class="text-xs text-red-600 dark:text-red-400 hover:underline flex items-center gap-1">
                                        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5H6a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2v-1M8 5a2 2 0 002 2h2a2 2 0 002-2M8 5a2 2 0 012-2h2a2 2 0 012 2m0 0h2a2 2 0 012 2v3m2 4H10m0 0l3-3m-3 3l3 3"/>
                                        </svg>
                                        Copy
                                    </button>
                                </div>
                                <pre class="text-xs font-mono text-red-700 dark:text-red-300 whitespace-pre-wrap overflow-x-auto max-h-64 overflow-y-auto">{{ test.longrepr }}</pre>
                            </div>
                            {% endif %}
                            
                            <!-- Captured Output -->
                            {% if test.sections %}
                            <div class="space-y-2">
                                {% for section in test.sections %}
                                <details class="group/section">
                                    <summary class="text-sm font-medium text-indigo-600 dark:text-indigo-400 cursor-pointer hover:underline flex items-center gap-2">
                                        <svg class="w-4 h-4 transition-transform group-open/section:rotate-90" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                                        </svg>
                                        {{ section[0] }}
                                    </summary>
                                    <pre class="mt-2 p-4 bg-slate-100 dark:bg-slate-900 rounded-xl text-xs font-mono overflow-x-auto border border-slate-200 dark:border-slate-800">{{ section[1] }}</pre>
                                </details>
                                {% endfor %}
                            </div>
                            {% endif %}
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </main>
        
        <!-- Footer -->
        <footer class="mt-12 py-8 border-t border-slate-200/50 dark:border-slate-700/50 glass">
            <div class="max-w-7xl mx-auto px-4 text-center">
                <p class="text-sm text-slate-500 dark:text-slate-400">
                    Powered by <span class="font-bold gradient-text">pytest-glow-report</span>
                </p>
            </div>
        </footer>
    </div>
    
    <script>
        function reportApp() {
            return {
                search: '',
                filter: 'all',
                
                get filteredCount() {
                    const tests = {{ tests | tojson }};
                    return tests.filter(t => 
                        this.matchesFilter(t.outcome) && 
                        this.matchesSearch(t.nodeid)
                    ).length;
                },
                
                matchesSearch(nodeid) {
                    if (!this.search) return true;
                    return nodeid.toLowerCase().includes(this.search.toLowerCase());
                },
                
                matchesFilter(outcome) {
                    if (this.filter === 'all') return true;
                    return outcome === this.filter;
                }
            }
        }
    </script>
</body>
</html>
