include README.md
include LICENSE
include requirements.txt
include pyproject.toml

# Include type information for PEP 561
recursive-include srsdb py.typed

# Exclude test files
exclude test_*.py
exclude example.py

# Exclude example databases and scripts
recursive-exclude example *

# Exclude development files
exclude .gitignore
exclude release.py
exclude setup.py

# Exclude CI/CD files
recursive-exclude .github *
recursive-exclude .devcontainer *
