{
  "name": "new_arrival_sms",
  "type": "sms",
  "description": "New arrival SMS template for product launch notifications. Simple plain text message for new product collections.",
  "categories": [
    "sms",
    "promotional"
  ],
  "subcategories": [
    "New Arrival"
  ],
  "tags": [
    "SMS",
    "Promotional",
    "Sales",
    "New Arrival",
    "Product Launch"
  ],
  "size": {
    "width": 320,
    "height": 200
  },
  "use_base_image": false,
  "background_color": [
    255,
    255,
    255
  ],
  "validation": {
    "product_name": {
      "field": "product_name",
      "type": "text",
      "minLength": 1,
      "maxLength": 20
    },
    "url": {
      "field": "url",
      "type": "text",
      "minLength": 1,
      "maxLength": 82
    },
    "samples": {
      "product_name": "Summer Essentials",
      "url": "https://example.com/new-arrivals"
    },
    "fieldPrompt": {
      "product_name": "Enter the product or collection name",
      "url": "Enter the product/collection URL"
    }
  },
  "config": {
    "isImageUploadPresent": false,
    "sample_url": ""
  },
  "components": [
    {
      "type": "text",
      "position": {
        "x": 0,
        "y": 0
      },
      "size": {
        "width": 320,
        "height": 200
      },
      "text_content": "Just landed: The new ${product_name} collection is here! Stocks are limited. Grab yours before they're gone: ${url} Text STOP to opt out.",
      "background_transparent": false
    }
  ]
}