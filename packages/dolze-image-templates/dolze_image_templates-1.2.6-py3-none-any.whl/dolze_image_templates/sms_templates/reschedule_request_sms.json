{
  "name": "reschedule_request_sms",
  "type": "sms",
  "description": "Reschedule request SMS template for appointment changes. Simple plain text message requesting customers to reschedule their appointment.",
  "categories": [
    "sms",
    "notification"
  ],
  "subcategories": [
    "Reschedule Request"
  ],
  "tags": [
    "SMS",
    "Appointments",
    "Reschedule",
    "Request"
  ],
  "size": {
    "width": 320,
    "height": 200
  },
  "use_base_image": false,
  "background_color": [
    255,
    255,
    255
  ],
  "validation": {
    "first_name": {
      "field": "first_name",
      "type": "text",
      "minLength": 1,
      "maxLength": 8
    },
    "reason": {
      "field": "reason",
      "type": "text",
      "minLength": 1,
      "maxLength": 31
    },
    "calendar_url": {
      "field": "calendar_url",
      "type": "text",
      "minLength": 1,
      "maxLength": 60
    },
    "samples": {
      "first_name": "Sarah",
      "reason": "unforeseen circumstances",
      "calendar_url": "https://example.com/reschedule"
    },
    "fieldPrompt": {
      "first_name": "Enter the recipient's first name",
      "reason": "Enter the reason for rescheduling",
      "calendar_url": "Enter the calendar/reschedule URL"
    }
  },
  "config": {
    "isImageUploadPresent": false,
    "sample_url": ""
  },
  "components": [
    {
      "type": "text",
      "position": {
        "x": 0,
        "y": 0
      },
      "size": {
        "width": 320,
        "height": 200
      },
      "text_content": "Hi ${first_name}, due to ${reason}, we need to reschedule your appointment. Please pick a new time here: ${calendar_url} Sorry for the hassle!",
      "background_transparent": false
    }
  ]
}