{
  "name": "booking_confirmation_sms",
  "type": "sms",
  "description": "Booking confirmation SMS template for appointment confirmations. Simple plain text message confirming appointment details.",
  "categories": [
    "sms",
    "notification"
  ],
  "subcategories": [
    "Booking Confirmation"
  ],
  "tags": [
    "SMS",
    "Appointments",
    "Booking",
    "Confirmation"
  ],
  "size": {
    "width": 320,
    "height": 200
  },
  "use_base_image": false,
  "background_color": [
    255,
    255,
    255
  ],
  "validation": {
    "brand_name": {
      "field": "brand_name",
      "type": "text",
      "minLength": 1,
      "maxLength": 18
    },
    "date": {
      "field": "date",
      "type": "text",
      "minLength": 1,
      "maxLength": 19
    },
    "time": {
      "field": "time",
      "type": "text",
      "minLength": 1,
      "maxLength": 12
    },
    "phone_number": {
      "field": "phone_number",
      "type": "text",
      "minLength": 1,
      "maxLength": 18
    },
    "samples": {
      "brand_name": "Health Clinic",
      "date": "March 15, 2024",
      "time": "2:00 PM",
      "phone_number": "555-1234"
    },
    "fieldPrompt": {
      "brand_name": "Enter the brand/company name",
      "date": "Enter the appointment date",
      "time": "Enter the appointment time",
      "phone_number": "Enter the phone number for rescheduling"
    }
  },
  "config": {
    "isImageUploadPresent": false,
    "sample_url": ""
  },
  "components": [
    {
      "type": "text",
      "position": {
        "x": 0,
        "y": 0
      },
      "size": {
        "width": 320,
        "height": 200
      },
      "text_content": "Confirmed! Your appointment with ${brand_name} is set for ${date} at ${time}. Need to reschedule? Call ${phone_number}.",
      "background_transparent": false
    }
  ]
}