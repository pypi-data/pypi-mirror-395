{
  "name": "otp_sms",
  "type": "sms",
  "description": "OTP SMS template for verification codes. Simple plain text message with one-time password for account verification.",
  "categories": [
    "sms",
    "notification"
  ],
  "subcategories": [
    "OTP"
  ],
  "tags": [
    "SMS",
    "Operational",
    "Urgent",
    "OTP",
    "Verification"
  ],
  "size": {
    "width": 320,
    "height": 200
  },
  "use_base_image": false,
  "background_color": [
    255,
    255,
    255
  ],
  "validation": {
    "otp_code": {
      "field": "otp_code",
      "type": "text",
      "minLength": 1,
      "maxLength": 9
    },
    "brand_name": {
      "field": "brand_name",
      "type": "text",
      "minLength": 1,
      "maxLength": 18
    },
    "time_limit": {
      "field": "time_limit",
      "type": "text",
      "minLength": 1,
      "maxLength": 8
    },
    "samples": {
      "otp_code": "123456",
      "brand_name": "FashionStore",
      "time_limit": "10"
    },
    "fieldPrompt": {
      "otp_code": "Enter the OTP verification code",
      "brand_name": "Enter the brand/company name",
      "time_limit": "Enter the time limit in minutes (e.g., 10, 15, etc.)"
    }
  },
  "config": {
    "isImageUploadPresent": false,
    "sample_url": ""
  },
  "components": [
    {
      "type": "text",
      "position": {
        "x": 0,
        "y": 0
      },
      "size": {
        "width": 320,
        "height": 200
      },
      "text_content": "${otp_code} is your verification code for ${brand_name}. Do not share this code with anyone. Valid for ${time_limit} minutes.",
      "background_transparent": false
    }
  ]
}