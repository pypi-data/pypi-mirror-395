{
  "name": "flash_sale_sms",
  "type": "sms",
  "description": "Flash sale SMS template for time-limited promotional offers. Simple plain text message for urgent sales alerts.",
  "categories": [
    "sms",
    "promotional"
  ],
  "subcategories": [
    "The Flash Sale"
  ],
  "tags": [
    "SMS",
    "Promotional",
    "Sales",
    "Flash Sale",
    "Discount"
  ],
  "size": {
    "width": 320,
    "height": 200
  },
  "use_base_image": false,
  "background_color": [
    255,
    255,
    255
  ],
  "validation": {
    "discount_percentage": {
      "field": "discount_percentage",
      "type": "text",
      "minLength": 1,
      "maxLength": 8
    },
    "brand_name": {
      "field": "brand_name",
      "type": "text",
      "minLength": 1,
      "maxLength": 18
    },
    "url": {
      "field": "url",
      "type": "text",
      "minLength": 1,
      "maxLength": 82
    },
    "samples": {
      "discount_percentage": "50%",
      "brand_name": "FashionStore",
      "url": "https://example.com/shop"
    },
    "fieldPrompt": {
      "discount_percentage": "Enter the discount percentage (e.g., 50%, 30% off, etc.)",
      "brand_name": "Enter the brand/company name",
      "url": "Enter the shop URL"
    }
  },
  "config": {
    "isImageUploadPresent": false,
    "sample_url": ""
  },
  "components": [
    {
      "type": "text",
      "position": {
        "x": 0,
        "y": 0
      },
      "size": {
        "width": 320,
        "height": 200
      },
      "text_content": "âš¡ Flash Sale Alert! Get ${discount_percentage} off everything at ${brand_name} for the next 24 hours only. Shop here: ${url} Text STOP to opt out.",
      "background_transparent": false
    }
  ]
}