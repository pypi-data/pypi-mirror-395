{
  "name": "reminder_24h_sms",
  "type": "sms",
  "description": "24-hour reminder SMS template for appointment reminders. Simple plain text message reminding customers about upcoming appointments.",
  "categories": [
    "sms",
    "notification"
  ],
  "subcategories": [
    "The 24h Reminder"
  ],
  "tags": [
    "SMS",
    "Appointments",
    "Reminder",
    "24 Hour"
  ],
  "size": {
    "width": 320,
    "height": 200
  },
  "use_base_image": false,
  "background_color": [
    255,
    255,
    255
  ],
  "validation": {
    "brand_name": {
      "field": "brand_name",
      "type": "text",
      "minLength": 1,
      "maxLength": 18
    },
    "time": {
      "field": "time",
      "type": "text",
      "minLength": 1,
      "maxLength": 12
    },
    "samples": {
      "brand_name": "Health Clinic",
      "time": "2:00 PM"
    },
    "fieldPrompt": {
      "brand_name": "Enter the brand/company name",
      "time": "Enter the appointment time"
    }
  },
  "config": {
    "isImageUploadPresent": false,
    "sample_url": ""
  },
  "components": [
    {
      "type": "text",
      "position": {
        "x": 0,
        "y": 0
      },
      "size": {
        "width": 320,
        "height": 200
      },
      "text_content": "Reminder: You have an appointment at ${brand_name} tomorrow at ${time}. Please arrive 10 mins early. See you soon!",
      "background_transparent": false
    }
  ]
}