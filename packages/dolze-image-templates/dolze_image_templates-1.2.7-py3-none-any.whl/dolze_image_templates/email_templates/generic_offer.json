      "section": "styling",
      "minLength": 4,
      "maxLength": 20
    },
    "background_color": {
      "field": "background_color",
      "type": "color",
      "section": "styling",
      "minLength": 4,
      "maxLength": 20
    },
    "text_color": {
      "field": "text_color",
      "type": "color",
      "section": "styling",
      "minLength": 4,
      "maxLength": 20
    },
    "border_color": {
      "field": "border_color",
      "type": "color",
      "section": "styling",
      "minLength": 4,
      "maxLength": 20
    },
    "link_color": {
      "field": "link_color",
      "type": "color",
      "section": "styling",
      "minLength": 4,
      "maxLength": 20
    },
    "primary_color": {
      "field": "primary_color",
      "type": "color",
      "section": "styling",
      "minLength": 4,
      "maxLength": 20
    },
    "samples": {
      "subject_line": "Special Offer - 40% Off Everything",
      "logo_url": "https://dolze-docs-uat.s3.ap-south-1.amazonaws.com/post_templates/dolze_light_bg.svg",
      "offer_name": "Special Offer - 40% Off Everything",
      "offer_line": "Good news — 40% Off Everything is now live!",
      "content_paragraph": "For a limited time, you can enjoy 40% off on all products sitewide. No extra steps. No codes. Just click and claim your offer.",
      "footer_text": "This email was sent to you as a subscriber of our newsletter.",
      "unsubscribe_url": "https://www.example.com/unsubscribe",
      "copyright_text": "© 2025 Company Name. All rights reserved.",
      "wrapper_bg_color": "#f3f4f6",
      "background_color": "#ffffff",
      "text_color": "#374151",
      "border_color": "#e5e7eb",
      "link_color": "#2563eb",
      "primary_color": "#2563eb"
    },
    "fieldPrompt": {
      "subject_line": "Enter the email subject line",
      "logo_url": "Enter URL for the logo image",
      "offer_name": "Enter the offer name/title",
      "offer_line": "Enter the offer line/description",
      "content_paragraph": "Enter the content paragraph",
      "footer_text": "Enter the footer text",
      "unsubscribe_url": "Enter the unsubscribe URL (optional)",
      "copyright_text": "Enter the copyright text (optional)",
      "wrapper_bg_color": "Enter the outer wrapper background color (hex, e.g., #f3f4f6) - the area around the email",
      "background_color": "Enter the main background color (hex, e.g., #ffffff) - the content container background",
      "text_color": "Enter the main text color (hex, e.g., #374151)",
      "border_color": "Enter the border color (hex, e.g., #e5e7eb) - used for footer border",
      "link_color": "Enter the link color (hex, e.g., #2563eb) - used for unsubscribe and other links",
      "primary_color": "Enter the primary color (hex, e.g., #2563eb) - used for hero section background"
    }
