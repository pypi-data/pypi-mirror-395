{
  "name": "generic_offer",
  "type": "email",
  "description": "Generic offer email template with header logo, hero section for offer details, content paragraph, and footer. Clean design perfect for promotional offers and announcements.",
  "categories": [
    "Offer"
  ],
  "tags": [
    "Offer"
  ],
  "size": {
    "width": 600,
    "height": 900
  },
  "use_base_image": false,
  "background_color": [
    243,
    244,
    246
  ],
  "validation": {
    "subject_line": {
      "field": "subject_line",
      "type": "text",
      "section": "global",
      "minLength": 1,
      "maxLength": 52
