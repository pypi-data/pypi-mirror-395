    "logo_url": {
      "field": "logo_url",
      "type": "image",
      "section": "header",
      "minLength": 5,
      "maxLength": 2048
    },
    "offer_name": {
      "field": "offer_name",
      "type": "text",
      "section": "hero",
      "minLength": 1,
      "maxLength": 40
    },
    "offer_line": {
      "field": "offer_line",
      "type": "text",
      "section": "hero",
      "minLength": 1,
      "maxLength": 55
    },
    "content_paragraph": {
      "field": "content_paragraph",
      "type": "text",
      "section": "content",
      "minLength": 1,
      "maxLength": 163
    },
    "footer_text": {
      "field": "footer_text",
      "type": "text",
      "section": "footer",
      "minLength": 1,
      "maxLength": 175
    },
    "unsubscribe_url": {
      "field": "unsubscribe_url",
      "type": "url",
