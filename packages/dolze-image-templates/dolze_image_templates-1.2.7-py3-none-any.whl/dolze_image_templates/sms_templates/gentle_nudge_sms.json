{
  "name": "gentle_nudge_sms",
  "type": "sms",
  "description": "Gentle nudge SMS template for abandoned cart recovery. Simple plain text message to remind customers about items left in cart.",
  "categories": [
    "sms",
    "promotional"
  ],
  "subcategories": [
    "The Gentle Nudge"
  ],
  "tags": [
    "SMS",
    "Abandoned Cart",
    "Recovery",
    "Reminder"
  ],
  "size": {
    "width": 320,
    "height": 200
  },
  "use_base_image": false,
  "background_color": [
    255,
    255,
    255
  ],
  "validation": {
    "first_name": {
      "field": "first_name",
      "type": "text",
      "minLength": 1,
      "maxLength": 8
    },
    "brand_name": {
      "field": "brand_name",
      "type": "text",
      "minLength": 1,
      "maxLength": 18
    },
    "cart_url": {
      "field": "cart_url",
      "type": "text",
      "minLength": 1,
      "maxLength": 54
    },
    "samples": {
      "first_name": "Sarah",
      "brand_name": "FashionStore",
      "cart_url": "https://example.com/cart"
    },
    "fieldPrompt": {
      "first_name": "Enter the recipient's first name",
      "brand_name": "Enter the brand/company name",
      "cart_url": "Enter the cart URL"
    }
  },
  "config": {
    "isImageUploadPresent": false,
    "sample_url": ""
  },
  "components": [
    {
      "type": "text",
      "position": {
        "x": 0,
        "y": 0
      },
      "size": {
        "width": 320,
        "height": 200
      },
      "text_content": "Hi ${first_name}, we noticed you left some items in your cart at ${brand_name}. Complete your order now while stock lasts: ${cart_url}",
      "background_transparent": false
    }
  ]
}