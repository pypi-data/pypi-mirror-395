{
  "name": "store_updates_sms",
  "type": "sms",
  "description": "Store updates SMS template for operational notifications about store closures or schedule changes. Simple plain text message informing customers.",
  "categories": [
    "sms",
    "notification"
  ],
  "subcategories": [
    "Store Updates"
  ],
  "tags": [
    "SMS",
    "Operational",
    "Urgent",
    "Store",
    "Updates"
  ],
  "size": {
    "width": 320,
    "height": 200
  },
  "use_base_image": false,
  "background_color": [
    255,
    255,
    255
  ],
  "validation": {
    "brand_name": {
      "field": "brand_name",
      "type": "text",
      "minLength": 1,
      "maxLength": 18
    },
    "date": {
      "field": "date",
      "type": "text",
      "minLength": 1,
      "maxLength": 19
    },
    "reason": {
      "field": "reason",
      "type": "text",
      "minLength": 1,
      "maxLength": 31
    },
    "reopen_date": {
      "field": "reopen_date",
      "type": "text",
      "minLength": 1,
      "maxLength": 19
    },
    "url": {
      "field": "url",
      "type": "text",
      "minLength": 1,
      "maxLength": 82
    },
    "samples": {
      "brand_name": "FashionStore",
      "date": "March 20, 2024",
      "reason": "inventory maintenance",
      "reopen_date": "March 21, 2024",
      "url": "https://example.com/shop"
    },
    "fieldPrompt": {
      "brand_name": "Enter the brand/company name",
      "date": "Enter the closure date",
      "reason": "Enter the reason for closure",
      "reopen_date": "Enter the reopen date",
      "url": "Enter the online shop URL"
    }
  },
  "config": {
    "isImageUploadPresent": false,
    "sample_url": ""
  },
  "components": [
    {
      "type": "text",
      "position": {
        "x": 0,
        "y": 0
      },
      "size": {
        "width": 320,
        "height": 200
      },
      "text_content": "Notice: ${brand_name} will be closed on ${date} for ${reason}. We reopen on ${reopen_date}. Shop online 24/7: ${url}",
      "background_transparent": false
    }
  ]
}