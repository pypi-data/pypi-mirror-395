{
  "name": "review_request_sms",
  "type": "sms",
  "description": "Review request SMS template for collecting customer feedback. Simple plain text message requesting product reviews.",
  "categories": [
    "sms",
    "notification"
  ],
  "subcategories": [
    "Review Request"
  ],
  "tags": [
    "SMS",
    "Feedback",
    "Support",
    "Review",
    "Rating"
  ],
  "size": {
    "width": 320,
    "height": 200
  },
  "use_base_image": false,
  "background_color": [
    255,
    255,
    255
  ],
  "validation": {
    "first_name": {
      "field": "first_name",
      "type": "text",
      "minLength": 1,
      "maxLength": 8
    },
    "product_name": {
      "field": "product_name",
      "type": "text",
      "minLength": 1,
      "maxLength": 20
    },
    "review_url": {
      "field": "review_url",
      "type": "text",
      "minLength": 1,
      "maxLength": 56
    },
    "samples": {
      "first_name": "Sarah",
      "product_name": "Designer Handbag",
      "review_url": "https://example.com/review"
    },
    "fieldPrompt": {
      "first_name": "Enter the recipient's first name",
      "product_name": "Enter the product name",
      "review_url": "Enter the review URL"
    }
  },
  "config": {
    "isImageUploadPresent": false,
    "sample_url": ""
  },
  "components": [
    {
      "type": "text",
      "position": {
        "x": 0,
        "y": 0
      },
      "size": {
        "width": 320,
        "height": 200
      },
      "text_content": "Hi ${first_name}, how was your recent purchase of ${product_name}? Rate us here: ${review_url} It only takes 30 seconds!",
      "background_transparent": false
    }
  ]
}