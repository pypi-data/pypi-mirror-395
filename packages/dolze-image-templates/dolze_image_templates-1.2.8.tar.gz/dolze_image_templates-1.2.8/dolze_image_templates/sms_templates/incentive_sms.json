{
  "name": "incentive_sms",
  "type": "sms",
  "description": "Incentive SMS template for abandoned cart recovery with discount offer. Simple plain text message with time-limited discount code.",
  "categories": [
    "sms",
    "promotional"
  ],
  "subcategories": [
    "The Incentive"
  ],
  "tags": [
    "SMS",
    "Abandoned Cart",
    "Recovery",
    "Discount",
    "Incentive"
  ],
  "size": {
    "width": 320,
    "height": 200
  },
  "use_base_image": false,
  "background_color": [
    255,
    255,
    255
  ],
  "validation": {
    "brand_name": {
      "field": "brand_name",
      "type": "text",
      "minLength": 1,
      "maxLength": 18
    },
    "code": {
      "field": "code",
      "type": "text",
      "minLength": 1,
      "maxLength": 12
    },
    "cart_url": {
      "field": "cart_url",
      "type": "text",
      "minLength": 1,
      "maxLength": 54
    },
    "samples": {
      "brand_name": "FashionStore",
      "code": "CART10",
      "cart_url": "https://example.com/cart"
    },
    "fieldPrompt": {
      "brand_name": "Enter the brand/company name",
      "code": "Enter the discount code",
      "cart_url": "Enter the cart URL"
    }
  },
  "config": {
    "isImageUploadPresent": false,
    "sample_url": ""
  },
  "components": [
    {
      "type": "text",
      "position": {
        "x": 0,
        "y": 0
      },
      "size": {
        "width": 320,
        "height": 200
      },
      "text_content": "Still thinking about it? Take an extra 10% off your cart at ${brand_name} if you checkout in the next hour! Code: ${code}. Link: ${cart_url}",
      "background_transparent": false
    }
  ]
}