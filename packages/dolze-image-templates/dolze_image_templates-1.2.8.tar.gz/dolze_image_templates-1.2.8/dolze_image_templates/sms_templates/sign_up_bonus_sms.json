{
  "name": "sign_up_bonus_sms",
  "type": "sms",
  "description": "Welcome SMS template with sign-up bonus code. Simple plain text message for new customer onboarding.",
  "categories": [
    "sms",
    "notification"
  ],
  "subcategories": [
    "The Sign-Up Bonus"
  ],
  "tags": [
    "SMS",
    "Welcome",
    "Onboarding",
    "Sign-Up",
    "Bonus"
  ],
  "size": {
    "width": 320,
    "height": 200
  },
  "use_base_image": false,
  "background_color": [
    255,
    255,
    255
  ],
  "validation": {
    "brand_name": {
      "field": "brand_name",
      "type": "text",
      "minLength": 1,
      "maxLength": 18
    },
    "code": {
      "field": "code",
      "type": "text",
      "minLength": 1,
      "maxLength": 12
    },
    "discount_amount": {
      "field": "discount_amount",
      "type": "text",
      "minLength": 1,
      "maxLength": 8
    },
    "url": {
      "field": "url",
      "type": "text",
      "minLength": 1,
      "maxLength": 82
    },
    "samples": {
      "brand_name": "FashionStore",
      "code": "WELCOME20",
      "discount_amount": "20%",
      "url": "https://example.com/shop"
    },
    "fieldPrompt": {
      "brand_name": "Enter the brand/company name",
      "code": "Enter the discount code",
      "discount_amount": "Enter the discount amount (e.g., 20%, $10, etc.)",
      "url": "Enter the shop URL"
    }
  },
  "config": {
    "isImageUploadPresent": false,
    "sample_url": ""
  },
  "components": [
    {
      "type": "text",
      "position": {
        "x": 0,
        "y": 0
      },
      "size": {
        "width": 320,
        "height": 200
      },
      "text_content": "Welcome to ${brand_name}! Thanks for joining. Use code ${code} for ${discount_amount} off your first order.\n\nShop now: ${url}\n\nText STOP to opt out.",
      "background_transparent": false
    }
  ]
}