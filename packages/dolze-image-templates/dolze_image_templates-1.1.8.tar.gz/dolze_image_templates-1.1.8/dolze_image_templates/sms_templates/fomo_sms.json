{
  "name": "fomo_sms",
  "type": "sms",
  "description": "FOMO SMS template for abandoned cart recovery using scarcity. Simple plain text message to create urgency about low stock.",
  "categories": [
    "sms",
    "promotional"
  ],
  "subcategories": [
    "The FOMO"
  ],
  "tags": [
    "SMS",
    "Abandoned Cart",
    "Recovery",
    "FOMO",
    "Scarcity"
  ],
  "size": {
    "width": 320,
    "height": 200
  },
  "use_base_image": false,
  "background_color": [
    255,
    255,
    255
  ],
  "validation": {
    "product_name": {
      "field": "product_name",
      "type": "text",
      "minLength": 1,
      "maxLength": 20
    },
    "cart_url": {
      "field": "cart_url",
      "type": "text",
      "minLength": 1,
      "maxLength": 54
    },
    "samples": {
      "product_name": "Designer Handbag",
      "cart_url": "https://example.com/cart"
    },
    "fieldPrompt": {
      "product_name": "Enter the product name",
      "cart_url": "Enter the cart URL"
    }
  },
  "config": {
    "isImageUploadPresent": false,
    "sample_url": ""
  },
  "components": [
    {
      "type": "text",
      "position": {
        "x": 0,
        "y": 0
      },
      "size": {
        "width": 320,
        "height": 200
      },
      "text_content": "Almost gone! ‚è≥ The ${product_name} in your cart is in high demand. Secure it now before it sells out: ${cart_url} Text STOP to opt out.",
      "background_transparent": false
    }
  ]
}