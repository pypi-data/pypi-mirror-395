{
  "name": "out_for_delivery_sms",
  "type": "sms",
  "description": "Out for delivery SMS template for transactional notifications. Simple plain text message notifying customers their package is out for delivery.",
  "categories": [
    "sms",
    "notification"
  ],
  "subcategories": [
    "Out for Delivery"
  ],
  "tags": [
    "SMS",
    "Transactional",
    "Order",
    "Delivery",
    "Shipping"
  ],
  "size": {
    "width": 320,
    "height": 200
  },
  "use_base_image": false,
  "background_color": [
    255,
    255,
    255
  ],
  "validation": {
    "brand_name": {
      "field": "brand_name",
      "type": "text",
      "minLength": 1,
      "maxLength": 18
    },
    "tracking_url": {
      "field": "tracking_url",
      "type": "text",
      "minLength": 1,
      "maxLength": 82
    },
    "samples": {
      "brand_name": "FashionStore",
      "tracking_url": "https://example.com/track/driver"
    },
    "fieldPrompt": {
      "brand_name": "Enter the brand/company name",
      "tracking_url": "Enter the tracking/driver URL"
    }
  },
  "config": {
    "isImageUploadPresent": false,
    "sample_url": ""
  },
  "components": [
    {
      "type": "text",
      "position": {
        "x": 0,
        "y": 0
      },
      "size": {
        "width": 320,
        "height": 200
      },
      "text_content": "Your ${brand_name} package is out for delivery today! ðŸšš Please ensure someone is home to receive it. Track driver: ${tracking_url}",
      "background_transparent": false
    }
  ]
}