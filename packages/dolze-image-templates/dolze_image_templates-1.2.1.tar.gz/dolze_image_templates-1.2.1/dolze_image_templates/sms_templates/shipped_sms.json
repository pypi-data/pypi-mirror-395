{
  "name": "shipped_sms",
  "type": "sms",
  "description": "Shipped/dispatched SMS template for transactional notifications. Simple plain text message notifying customers their order has been shipped.",
  "categories": [
    "sms",
    "notification"
  ],
  "subcategories": [
    "Shipped / Dispatched"
  ],
  "tags": [
    "SMS",
    "Transactional",
    "Order",
    "Shipped",
    "Dispatch"
  ],
  "size": {
    "width": 320,
    "height": 200
  },
  "use_base_image": false,
  "background_color": [
    255,
    255,
    255
  ],
  "validation": {
    "order_id": {
      "field": "order_id",
      "type": "text",
      "minLength": 1,
      "maxLength": 12
    },
    "tracking_url": {
      "field": "tracking_url",
      "type": "text",
      "minLength": 1,
      "maxLength": 82
    },
    "samples": {
      "order_id": "ORD-12345",
      "tracking_url": "https://example.com/track/12345"
    },
    "fieldPrompt": {
      "order_id": "Enter the order ID",
      "tracking_url": "Enter the tracking URL"
    }
  },
  "config": {
    "isImageUploadPresent": false,
    "sample_url": ""
  },
  "components": [
    {
      "type": "text",
      "position": {
        "x": 0,
        "y": 0
      },
      "size": {
        "width": 320,
        "height": 200
      },
      "text_content": "Great news! Your order #${order_id} is on its way. Track your package here: ${tracking_url}",
      "background_transparent": false
    }
  ]
}