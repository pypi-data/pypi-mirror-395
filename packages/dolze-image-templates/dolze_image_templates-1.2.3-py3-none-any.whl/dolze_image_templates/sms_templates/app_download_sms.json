{
  "name": "app_download_sms",
  "type": "sms",
  "description": "App download SMS template for encouraging users to download the mobile app. Simple plain text message with app download link.",
  "categories": [
    "sms",
    "notification"
  ],
  "subcategories": [
    "The App Download"
  ],
  "tags": [
    "SMS",
    "Welcome",
    "Onboarding",
    "App",
    "Download"
  ],
  "size": {
    "width": 320,
    "height": 200
  },
  "use_base_image": false,
  "background_color": [
    255,
    255,
    255
  ],
  "validation": {
    "first_name": {
      "field": "first_name",
      "type": "text",
      "minLength": 1,
      "maxLength": 8
    },
    "brand_name": {
      "field": "brand_name",
      "type": "text",
      "minLength": 1,
      "maxLength": 18
    },
    "app_url": {
      "field": "app_url",
      "type": "text",
      "minLength": 1,
      "maxLength": 53
    },
    "samples": {
      "first_name": "Sarah",
      "brand_name": "FashionStore",
      "app_url": "https://example.com/app"
    },
    "fieldPrompt": {
      "first_name": "Enter the recipient's first name",
      "brand_name": "Enter the brand/company name",
      "app_url": "Enter the app download URL"
    }
  },
  "config": {
    "isImageUploadPresent": false,
    "sample_url": ""
  },
  "components": [
    {
      "type": "text",
      "position": {
        "x": 0,
        "y": 0
      },
      "size": {
        "width": 320,
        "height": 200
      },
      "text_content": "Hi ${first_name}, enhance your experience with the ${brand_name} app. Download now for a special treat: ${app_url}\n\nText STOP to opt out.",
      "background_transparent": false
    }
  ]
}