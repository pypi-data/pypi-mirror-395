{
  "name": "launch_announcement",
  "description": "General business or initiative launch | USE: business launch, initiative launch, program launch, announcement | NOT: product launch (use product_launch), job posting, holiday greeting",
  "type": "post",
  "categories": [
    "announcement",
    "promotional",
    "social_media"
  ],
  "tags": [
    "Product Launch"
  ],
  "size": {
    "width": 1080,
    "height": 1350
  },
  "use_base_image": false,
  "validation": {
    "main_title": {
      "field": "main_title",
      "type": "text",
      "minLength": 1,
      "maxLength": 30,
      "default": "LAUNCHING SOON"
    },
    "subtitle": {
      "field": "subtitle",
      "type": "text",
      "minLength": 0,
      "maxLength": 120,
      "default": "Get ready, because something amazing is coming your way!\nOur launch is just around the corner."
    },
    "website_url": {
      "field": "website_url",
      "type": "text",
      "minLength": 3,
      "maxLength": 53,
      "default": "www.reallygreatsite.com"
    },
    "custom_css": {
      "field": "custom_css",
      "type": "text",
      "minLength": 0,
      "maxLength": 4000
    },
    "custom_html": {
      "field": "custom_html",
      "type": "text",
      "minLength": 0,
      "maxLength": 4000
    }
  },
  "samples": {
    "main_title": "LAUNCHING SOON",
    "subtitle": "Get ready, because something amazing is coming your way!\nOur launch is just around the corner.",
    "website_url": "www.reallygreatsite.com"
  },
  "fieldPrompt": {
    "main_title": "Main headline",
    "subtitle": "Subtitle text, use \\n for line break if needed (e.g., 'Get ready for something amazing!\\nLaunch coming soon.')",
    "website_url": "Website URL",
    "custom_css": "Optional custom CSS",
    "custom_html": "Optional custom HTML"
  },
  "config": {
    "isImageUploadPresent": false,
    "sample_url": "https://i.ibb.co/DfLHxTDT/Black-and-White-Simple-Launching-Soon-Facebook-Post.png"
  },
  "components": [
    {
      "type": "html",
      "position": {
        "x": 0,
        "y": 0
      },
      "size": {
        "width": 1080,
        "height": 1350
      },
      "background_transparent": true,
      "rendering_engine": "auto",
      "html_content": "<!DOCTYPE html>\n<html><head><meta charset=\"UTF-8\"><style>\n@import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&display=swap');\n*{margin:0;padding:0;box-sizing:border-box;}\nhtml,body{\n  width:1080px;\n  height:1350px;\n  overflow:hidden;\n  position:relative;\n  font-family:'Inter','Helvetica Neue',Arial,sans-serif;\n}\n.container{\n  width:100%;\n  height:100%;\n  position:relative;\n  background:url('https://i.ibb.co/DfLHxTDT/Black-and-White-Simple-Launching-Soon-Facebook-Post.png') center/cover no-repeat;\n  overflow:hidden;\n}\n.content-wrapper{\n  position:relative;\n  width:100%;\n  height:100%;\n  display:flex;\n  flex-direction:column;\n  align-items:center;\n  justify-content:flex-start;\n  padding-top:450px;\n  padding-left:50px;\n  padding-right:50px;\n  text-align:center;\n}\n.main-title{\n  font-family:'Inter',sans-serif;\n  font-size:135px;\n  font-weight:900;\n  line-height:1;\n  letter-spacing:10px;\n  color:#ffffff;\n  text-transform:uppercase;\n  margin:0 0 45px;\n  text-shadow:0 10px 35px rgba(0,0,0,0.9),0 5px 18px rgba(0,0,0,0.7),0 2px 8px rgba(0,0,0,0.5);\n  white-space:pre-wrap;\n  max-width:1000px;\n  word-spacing:0.1em;\n}\n.subtitle-text{\n  font-size:26px;\n  font-weight:500;\n  line-height:1.6;\n  color:#ffffff;\n  max-width:920px;\n  margin:0 0 40px;\n  text-shadow:0 5px 15px rgba(0,0,0,0.8),0 2px 8px rgba(0,0,0,0.6);\n  white-space:pre-wrap;\n}\n.website-url{\n  font-size:24px;\n  color:#e5e5e5;\n  letter-spacing:2.5px;\n  font-weight:400;\n  text-shadow:0 4px 12px rgba(0,0,0,0.7);\n}\n${custom_css}\n</style></head><body><div class=\"container\">\n  <div class=\"content-wrapper\">\n    <div class=\"main-title\">${main_title}</div>\n    <div class=\"subtitle-text\">${subtitle}</div>\n    <div class=\"website-url\">${website_url}</div>\n  </div>\n  ${custom_html}\n</div></body></html>",
      "css_content": ""
    }
  ]
}