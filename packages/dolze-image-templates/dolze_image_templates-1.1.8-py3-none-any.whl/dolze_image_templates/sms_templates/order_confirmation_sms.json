{
  "name": "order_confirmation_sms",
  "type": "sms",
  "description": "Order confirmation SMS template for transactional notifications. Simple plain text message confirming order placement.",
  "categories": [
    "sms",
    "notification"
  ],
  "subcategories": [
    "Order Confirmation"
  ],
  "tags": [
    "SMS",
    "Transactional",
    "Order",
    "Confirmation"
  ],
  "size": {
    "width": 320,
    "height": 200
  },
  "use_base_image": false,
  "background_color": [
    255,
    255,
    255
  ],
  "validation": {
    "brand_name": {
      "field": "brand_name",
      "type": "text",
      "minLength": 1,
      "maxLength": 18
    },
    "order_id": {
      "field": "order_id",
      "type": "text",
      "minLength": 1,
      "maxLength": 12
    },
    "order_url": {
      "field": "order_url",
      "type": "text",
      "minLength": 1,
      "maxLength": 81
    },
    "samples": {
      "brand_name": "FashionStore",
      "order_id": "ORD-12345",
      "order_url": "https://example.com/order/12345"
    },
    "fieldPrompt": {
      "brand_name": "Enter the brand/company name",
      "order_id": "Enter the order ID",
      "order_url": "Enter the order/receipt URL"
    }
  },
  "config": {
    "isImageUploadPresent": false,
    "sample_url": ""
  },
  "components": [
    {
      "type": "text",
      "position": {
        "x": 0,
        "y": 0
      },
      "size": {
        "width": 320,
        "height": 200
      },
      "text_content": "Thanks for shopping with ${brand_name}! Your order #${order_id} has been confirmed. View receipt: ${order_url}",
      "background_transparent": false
    }
  ]
}