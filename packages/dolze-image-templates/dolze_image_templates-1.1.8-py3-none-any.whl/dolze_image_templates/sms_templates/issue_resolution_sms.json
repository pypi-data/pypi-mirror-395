{
  "name": "issue_resolution_sms",
  "type": "sms",
  "description": "Issue resolution SMS template for notifying customers that their support ticket has been resolved. Simple plain text message confirming ticket resolution.",
  "categories": [
    "sms",
    "notification"
  ],
  "subcategories": [
    "Issue Resolution"
  ],
  "tags": [
    "SMS",
    "Feedback",
    "Support",
    "Issue",
    "Resolution"
  ],
  "size": {
    "width": 320,
    "height": 200
  },
  "use_base_image": false,
  "background_color": [
    255,
    255,
    255
  ],
  "validation": {
    "first_name": {
      "field": "first_name",
      "type": "text",
      "minLength": 1,
      "maxLength": 8
    },
    "ticket_id": {
      "field": "ticket_id",
      "type": "text",
      "minLength": 1,
      "maxLength": 12
    },
    "brand_name": {
      "field": "brand_name",
      "type": "text",
      "minLength": 1,
      "maxLength": 18
    },
    "samples": {
      "first_name": "Sarah",
      "ticket_id": "TKT-12345",
      "brand_name": "FashionStore"
    },
    "fieldPrompt": {
      "first_name": "Enter the recipient's first name",
      "ticket_id": "Enter the support ticket ID",
      "brand_name": "Enter the brand/company name"
    }
  },
  "config": {
    "isImageUploadPresent": false,
    "sample_url": ""
  },
  "components": [
    {
      "type": "text",
      "position": {
        "x": 0,
        "y": 0
      },
      "size": {
        "width": 320,
        "height": 200
      },
      "text_content": "Hi ${first_name}, your support ticket #${ticket_id} has been resolved. Please check your email for details. Thanks, ${brand_name}.",
      "background_transparent": false
    }
  ]
}