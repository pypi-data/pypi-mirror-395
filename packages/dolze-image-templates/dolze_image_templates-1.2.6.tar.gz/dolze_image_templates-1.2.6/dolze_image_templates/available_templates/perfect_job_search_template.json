{
  "name": "perfect_job_search_template",
  "description": "Professional job search promotion with left photo and bold right-side headline",
  "size": {
    "width": 1200,
    "height": 627
  },
  "background_color": [0, 0, 0],
  "use_base_image": false,
  "components": [
    {
      "type": "image",
      "image_url": "${image_url}",
      "position": { "x": 0, "y": 0 },
      "size": { "width": 600, "height": 627 },
      "aspect_ratio": "cover"
    },
    {
      "type": "image",
      "image_url": "${logo_icon_url}",
      "position": { "x": 660, "y": 66 },
      "size": { "width": 54, "height": 54 },
      "aspect_ratio": "contain"
    },
    {
      "type": "text",
      "text": "${logo_primary_text}",
      "position": { "x": 726, "y": 72 },
      "font_size": 24,
      "color": [255, 255, 255],
      "font_path": "Poppins-SemiBold",
      "alignment": "left",
      "max_width": 220
    },
    {
      "type": "text",
      "text": "${logo_secondary_text}",
      "position": { "x": 726, "y": 102 },
      "font_size": 20,
      "color": [196, 196, 196],
      "font_path": "Poppins-Regular",
      "alignment": "left",
      "max_width": 220
    },
    {
      "type": "text",
      "text": "${headline}",
      "position": { "x": 660, "y": 168 },
      "font_size": 50,
      "color": [255, 255, 255],
      "font_path": "Poppins-ExtraBold",
      "alignment": "left",
      "max_width": 500,
      "line_height": 1.3
    },
    {
      "type": "cta_button",
      "text": "${cta_text}",
      "position": { "x": 660, "y": 390 },
      "size": { "width": 250, "height": 45 },
      "bg_color": [246, 113, 29],
      "text_color": [255, 255, 255],
      "corner_radius": 5,
      "font_size": 20,
      "font_path": "Poppins-SemiBold",
      "alignment": "center"
    },
    {
      "type": "rectangle",
      "position": { "x": 660, "y": 520 },
      "size": { "width": 2, "height": 60 },
      "fill_color": [246, 113, 29]
    },
    {
      "type": "text",
      "text": "${supporting_text}",
      "position": { "x": 680, "y": 520 },
      "font_size": 22,
      "color": [255, 255, 255],
      "font_path": "Poppins-Regular",
      "alignment": "left",
      "max_width": 440,
      "line_height": 1.35
    },
 
    {
      "type": "rectangle",
      "position": { "x": 1157, "y": 503 },
      "size": { "width": 40, "height": 40 },
      "fill_color": [246, 113, 29]
    },
    {
      "type": "rectangle",
      "position": { "x": 1075, "y": 585 },
      "size": { "width": 40, "height": 40 },
      "fill_color": [246, 113, 29]
    },
    {
        "type": "rectangle",
        "position": { "x": 1157, "y": 585 },
        "size": { "width": 40, "height": 40 },
        "fill_color": [246, 113, 29]
      },
    {
      "type": "rectangle",
      "position": { "x": 1116, "y": 544 },
      "size": { "width": 40, "height": 40 },
      "fill_color": [246, 113, 29]
    }
  ],
  "validation": {
    "image_url": { "required": true },
    "logo_icon_url": { "required": true },
    "logo_primary_text": { "required": true },
    "logo_secondary_text": { "required": true },
    "headline": { "required": true },
    "cta_text": { "required": true },
    "supporting_text": { "required": true }
  },
  "config": {
    "sample_preview": "https://example.com/sample-perfect-job-search.png",
    "placeholders": {
      "image_url": "https://images.pexels.com/photos/567633/pexels-photo-567633.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2",
      "logo_icon_url": "https://images.pexels.com/photos/777001/pexels-photo-777001.png?auto=compress&cs=tinysrgb&w=300&h=300&dpr=2",
      "logo_primary_text": "Business",
      "logo_secondary_text": "Agency",
      "headline": "Find The Perfect Job That You Deserve.",
      "cta_text": "reallygreatsite.com",
      "supporting_text": "We Will Help You to Find The Most Suitable Job for You"
    }
  }
}
