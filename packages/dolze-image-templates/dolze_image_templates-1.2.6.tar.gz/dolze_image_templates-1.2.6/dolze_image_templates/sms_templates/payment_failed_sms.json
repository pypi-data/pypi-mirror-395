{
  "name": "payment_failed_sms",
  "type": "sms",
  "description": "Payment failed SMS template for urgent operational notifications. Simple plain text message alerting customers about failed payment.",
  "categories": [
    "sms",
    "notification"
  ],
  "subcategories": [
    "Payment Failed"
  ],
  "tags": [
    "SMS",
    "Operational",
    "Urgent",
    "Payment",
    "Failed"
  ],
  "size": {
    "width": 320,
    "height": 200
  },
  "use_base_image": false,
  "background_color": [
    255,
    255,
    255
  ],
  "validation": {
    "order_id": {
      "field": "order_id",
      "type": "text",
      "minLength": 1,
      "maxLength": 12
    },
    "payment_url": {
      "field": "payment_url",
      "type": "text",
      "minLength": 1,
      "maxLength": 57
    },
    "samples": {
      "order_id": "ORD-12345",
      "payment_url": "https://example.com/payment"
    },
    "fieldPrompt": {
      "order_id": "Enter the order ID",
      "payment_url": "Enter the payment update URL"
    }
  },
  "config": {
    "isImageUploadPresent": false,
    "sample_url": ""
  },
  "components": [
    {
      "type": "text",
      "position": {
        "x": 0,
        "y": 0
      },
      "size": {
        "width": 320,
        "height": 200
      },
      "text_content": "Action Required: Payment for order #${order_id} failed. Please update your payment method to avoid cancellation: ${payment_url}",
      "background_transparent": false
    }
  ]
}