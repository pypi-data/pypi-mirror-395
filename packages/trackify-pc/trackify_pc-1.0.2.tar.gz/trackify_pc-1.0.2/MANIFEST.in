# Include documentation
include README.md
include LICENSE
include DEVELOPER_DOCS.md
include SYSTEM_OVERVIEW.md
include QUICK_TEST.md

# Include configuration files
include trackify/backend/config/categories.json

# Include scripts
include start.ps1
include run_backend.py

# Include requirements
include trackify/backend/requirements.txt

# Include built frontend
recursive-include trackify/frontend/dist *

# Exclude unnecessary files
exclude .gitignore
exclude frontend/.gitignore
exclude frontend/package.json
exclude frontend/package-lock.json
exclude frontend/tsconfig.json
exclude frontend/vite.config.ts
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
recursive-exclude * .DS_Store
recursive-exclude .venv *
recursive-exclude data *
recursive-exclude frontend/src *
recursive-exclude frontend/public *
recursive-exclude frontend/node_modules *
