{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "streamlit_app_Windows",
            "type": "shell",
            "command": ".venv\\Scripts\\streamlit.exe run app.py",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "streamlit_app_Mac",
            "type": "shell",
            "command": ".venv/bin/streamlit run app.py",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        }
    ]
}