{
  "openapi": "3.0.0",
  "info": {
    "title": "Article Extractor And Summarizer",
    "version": "1.0.0",
    "description": "RapidAPI: restyler/article-extractor-and-summarizer"
  },
  "servers": [
    {
      "url": "https://article-extractor-and-summarizer.p.rapidapi.com"
    }
  ],
  "paths": {
    "/summarize": {
      "get": {
        "summary": "/summarize",
        "description": "Summarizes the article after extracting it from the specified url.",
        "operationId": "/summarize",
        "parameters": [
          {
            "name": "url",
            "in": "query",
            "required": true,
            "description": "Example value: https://time.com/6266679/musk-ai-open-letter/",
            "schema": {
              "type": "string",
              "default": null,
              "enum": null
            }
          },
          {
            "name": "length",
            "in": "query",
            "required": false,
            "description": "Length in paragraphs. This parameter might be ignored for a very long articles.",
            "schema": {
              "type": "number",
              "default": "0",
              "enum": null
            }
          },
          {
            "name": "html",
            "in": "query",
            "required": false,
            "description": "Example value: ",
            "schema": {
              "type": "string",
              "default": null,
              "enum": null
            }
          },
          {
            "name": "lang",
            "in": "query",
            "required": false,
            "description": "Target language to translate summary into",
            "schema": {
              "type": "string",
              "default": null,
              "enum": null
            }
          },
          {
            "name": "engine",
            "in": "query",
            "required": false,
            "description": "Pass 1 to this option to use legacy summarizer engine. By default, engine 2 is used. New since Jun 2024.",
            "schema": {
              "type": "number",
              "default": "2",
              "enum": null
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {}
              }
            }
          }
        }
      }
    },
    "/extract": {
      "get": {
        "summary": "/extract",
        "description": "Extract an article body and markdown version of the body.",
        "operationId": "/extract",
        "parameters": [
          {
            "name": "url",
            "in": "query",
            "required": true,
            "description": "Example value: https://time.com/6266679/musk-ai-open-letter/",
            "schema": {
              "type": "string",
              "default": null,
              "enum": null
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {}
              }
            }
          }
        }
      }
    },
    "/summarize-text": {
      "post": {
        "summary": "/summarize-text",
        "description": "Summarize text (in Markdown)",
        "operationId": "/summarize_text",
        "parameters": [],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {}
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "ApiAuth": {
        "type": "apiKey",
        "in": "header",
        "name": "X-RapidAPI-Key"
      }
    }
  },
  "security": [
    {
      "ApiAuth": []
    }
  ]
}